                      {
                        "@Delete": "false",
                        "@Hide": "false",
                        "@Num": "1",
                        "ItemTitle": "一",
                        "ItemSentence": {
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "都道府県の知事及び教育委員会"
                          }
                        }
                      },
                      {
                        "@Delete": "false",
                        "@Hide": "false",
                        "@Num": "2",
                        "ItemTitle": "二",
                        "ItemSentence": {
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "当該都道府県の区域内の市町村の長及び教育委員会"
                          }
                        }
                      },
                      {
                        "@Delete": "false",
                        "@Hide": "false",
                        "@Num": "3",
                        "ItemTitle": "三",
                        "ItemSentence": {
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "学齢期を経過した者であって学校における就学の機会が提供されなかったもののうちその機会の提供を希望する者に対する支援活動を行う民間の団体その他の当該都道府県及び当該市町村が必要と認める者"
                          }
                        }
                      }
                    ]
