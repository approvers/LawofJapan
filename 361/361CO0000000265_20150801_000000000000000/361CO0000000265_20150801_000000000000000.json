            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この政令は、法の施行の日（昭和六十一年七月二十九日）から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "昭和六二年三月二〇日政令第五四号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Delete": "false",
            "@Hide": "false",
