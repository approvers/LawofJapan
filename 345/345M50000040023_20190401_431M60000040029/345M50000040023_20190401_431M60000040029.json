            "@Num": "1",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この省令は、平成十三年一月六日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成一五年三月二八日財務省令第二〇号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
