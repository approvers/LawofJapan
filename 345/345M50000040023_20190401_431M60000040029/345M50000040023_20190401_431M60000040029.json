            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この省令は、公布の日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成二一年四月一日財務省令第二九号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Hide": "false",
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この省令は、平成二十一年四月一日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成三一年四月一日財務省令第二九号",
          "@Type": "Amend",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
