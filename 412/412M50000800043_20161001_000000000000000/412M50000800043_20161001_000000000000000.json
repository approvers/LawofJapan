{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "43",
    "@Year": "12",
    "LawNum": "平成十二年運輸省令第四十三号",
    "LawBody": {
      "LawTitle": "油又は有害液体物質による海洋の汚染の防止のために使用する薬剤の技術上の基準を定める省令",
      "EnactStatement": "海洋汚染及び海上災害の防止に関する法律（昭和四十五年法律第百三十六号）第四十三条の四第一項の規定に基づき、油又は有害液体物質による海洋の汚染の防止のために使用する薬剤の技術上の基準を定める省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "海洋汚染等及び海上災害の防止に関する法律（以下「法」という。）第四十三条の七第一項の国土交通省令・環境省令で定める薬剤は、油処理剤及び油ゲル化剤とする。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第四十三条の七第一項の国土交通省令・環境省令で定める薬剤の技術上の基準は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "油処理剤については、次の要件を備えていること。"
                  },
                  "Subitem1": [
                    {
                      "@Num": "1",
                      "Subitem1Title": "イ",
                      "Subitem1Sentence": {
                        "Sentence": "引火点は、摂氏六十度を超えるものであること。"
                      }
                    },
                    {
                      "@Num": "2",
                      "Subitem1Title": "ロ",
                      "Subitem1Sentence": {
                        "Sentence": "界面活性剤の生分解度は、生分解試験開始後七日目の値と八日目の値との平均値が九十パーセント以上であること。"
                      }
                    },
                    {
                      "@Num": "3",
                      "Subitem1Title": "ハ",
                      "Subitem1Sentence": {
                        "Sentence": "対生物毒性は、スケレトネマ・コスタツムを一週間、当該油処理剤の含有量が一万立方センチメートルにつき一立方センチメートル以上の溶液で培養したときに当該スケレトネマ・コスタツムが死滅しないものであり、かつ、ヒメダカを二十四時間、当該油処理剤の含有量が一万立方センチメートルにつき三十立方センチメートル以上の溶液で飼育したときにその五十パーセント以上が死滅しないものであること。"
                      }
                    },
                    {
                      "@Num": "4",
                      "Subitem1Title": "ニ",
                      "Subitem1Sentence": {
                        "Sentence": "当該油処理剤により処理された特定油が微粒子となつて海中に分散するものであり、かつ、当該処理された特定油が海底に沈降しないものであること。"
                      }
                    }
                  ]
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "油ゲル化剤については、次の要件を備えていること。"
                  },
                  "Subitem1": [
                    {
                      "@Num": "1",
                      "Subitem1Title": "イ",
                      "Subitem1Sentence": {
                        "Sentence": "液体油ゲル化剤"
                      },
                      "Subitem2": [
                        {
                          "@Num": "1",
                          "Subitem2Title": "（１）",
                          "Subitem2Sentence": {
                            "Sentence": "引火点は、摂氏六十度を超えるものであること。"
                          }
                        },
                        {
                          "@Num": "2",
                          "Subitem2Title": "（２）",
                          "Subitem2Sentence": {
                            "Sentence": "水溶性成分が海中に残留するものでないこと。"
                          }
                        },
                        {
                          "@Num": "3",
                          "Subitem2Title": "（３）",
                          "Subitem2Sentence": {
                            "Sentence": "対生物毒性は、スケレトネマ・コスタツムを一週間、当該液体油ゲル化剤の含有量が一万立方センチメートルにつき一立方センチメートル以上の溶液で培養したときに当該スケレトネマ・コスタツムが死滅しないものであり、かつ、ヒメダカを二十四時間、当該液体油ゲル化剤の含有量が一万立方センチメートルにつき三十立方センチメートル以上の溶液で飼育したときにその五十パーセント以上が死滅しないものであること。"
                          }
                        }
                      ]
                    },
                    {
                      "@Num": "2",
                      "Subitem1Title": "ロ",
                      "Subitem1Sentence": {
                        "Sentence": "粉末油ゲル化剤"
                      },
                      "Subitem2": [
                        {
                          "@Num": "1",
                          "Subitem2Title": "（１）",
                          "Subitem2Sentence": {
                            "Sentence": "引火点は、摂氏六十度を超えるものであること。"
                          }
                        },
                        {
                          "@Num": "2",
                          "Subitem2Title": "（２）",
                          "Subitem2Sentence": {
                            "Sentence": "海面に浮き、容易に回収されるものであること。"
                          }
                        },
                        {
                          "@Num": "3",
                          "Subitem2Title": "（３）",
                          "Subitem2Sentence": {
                            "Sentence": "対生物毒性は、スケレトネマ・コスタツムを一週間、十キログラムにつき当該粉末油ゲル化剤を一グラム以上加えた液で培養したときに当該スケレトネマ・コスタツムが死滅しないものであり、かつ、ヒメダカを二十四時間、十キログラムにつき当該粉末油ゲル化剤を三十グラム以上加えた液で飼育したときにその五十パーセント以上が死滅しないものであること。"
                          }
                        }
                      ]
                    }
                  ]
                }
              ]
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、平成十三年一月六日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成一六年一〇月二八日国土交通省令第九三号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、海洋汚染及び海上災害の防止に関する法律等の一部を改正する法律（以下「改正法」という。）の施行の日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成一八年一二月八日国土交通省・環境省令第五号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": [
                {
                  "@Function": "main",
                  "@Num": "1",
