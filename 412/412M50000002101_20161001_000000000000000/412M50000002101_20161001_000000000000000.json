{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "101",
    "@Year": "12",
    "LawNum": "平成十二年総理府令第百一号",
    "LawBody": {
      "LawTitle": "環境省聴聞手続規則",
      "EnactStatement": "行政手続法（平成五年法律第八十八号）第三章第二節の規定を実施するため、環境省聴聞手続規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（趣旨）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "環境大臣が行う不利益処分に係る聴聞の手続については、他の法律及び法律に基づく命令に特別の定めがある場合を除くほか、この省令の定めるところによる。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（用語）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令で使用する用語は、行政手続法（以下「法」という。）で使用する用語の例による。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（聴聞の期日及び場所の変更）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "行政庁が法第十五条第一項の通知（同条第三項の規定により通知をした場合を含む。）をした場合において、当事者は、やむを得ない理由がある場合には、行政庁に対し、聴聞の期日又は場所の変更を申し出ることができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "行政庁は、前項の申出により、又は職権により、聴聞の期日又は場所を変更することができる。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "行政庁は、前項の規定により聴聞の期日又は場所を変更したときは、速やかに、その旨を当事者及び参考人（その時までに法第十七条第一項の求めを受諾し、又は同項の許可を受けている者に限る。）に通知しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（関係人の参加許可の手続）",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第十七条第一項の規定による許可の申請については、関係人は、聴聞の期日の十四日前までに、その氏名、住所及び当該聴聞に係る不利益処分につき利害関係を有することの疎明を記載した書面を主宰者に提出してこれを行うものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "主宰者は、関係人の参加を許可したときは、速やかに、その旨を当該申請者に通知しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "5",
            "ArticleCaption": "（文書等の閲覧の手続）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "法第十八条第一項の規定による閲覧の求めについては、当事者等は、その氏名、住所及び閲覧をしようとする資料の標目を記載した書面を行政庁に提出してこれを行うものとする。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "ただし、聴聞の期日における審理の進行に応じて必要となった場合の閲覧については、口頭で求めれば足りる。"
                    }
                  ]
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Num": "1",
                      "#text": "行政庁は、閲覧を許可したときは、その場で閲覧させる場合を除き、速やかに、閲覧の日時及び場所を当該当事者等に通知しなければならない。"
                    },
                    {
                      "@Num": "2",
                      "#text": "この場合において、行政庁は、聴聞の審理における当事者等の意見陳述の準備を妨げることがないよう配慮するものとする。"
                    }
                  ]
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Num": "1",
                      "#text": "行政庁は、聴聞の期日における審理の進行に応じて必要となった資料の閲覧の求めがあった場合に、当該審理において閲覧させることができないとき（法第十八条第一項後段の規定による拒否の場合を除く。）は、閲覧の日時及び場所を指定し、当該当事者等に通知しなければならない。"
                    },
                    {
                      "@Num": "2",
                      "#text": "この場合において、主宰者は、法第二十二条第一項の規定に基づき、当該閲覧の日時以降の日を新たな聴聞の期日として定めるものとする。"
                    }
                  ]
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（主宰者の指名の手続）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第十九条第一項の規定による主宰者の指名は、聴聞の通知の時までに行うものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "主宰者が法第十九条第二項各号のいずれかに該当するに至ったときは、行政庁は、速やかに、新たな主宰者を指名しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "7",
            "ArticleCaption": "（補佐人の出頭許可の手続）",
            "ArticleTitle": "第七条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "法第二十条第三項の規定による許可の申請については、当事者又は参加人は、聴聞の期日の七日前までに、補佐人の氏名、住所、当事者又は参加人との関係及び補佐する事項を記載した書面を主宰者に提出してこれを行うものとする。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "ただし、法第二十二条第二項（法第二十五条後段において準用する場合を含む。）の規定により通知をされた聴聞の期日に出頭させようとする補佐人であって既に受けた許可に係る事項につき補佐するものについては、この限りではない。"
                    }
                  ]
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "主宰者は、補佐人の出頭を許可したときは、速やかに、その旨を当該当事者又は参加人に通知しなければならない。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "補佐人の陳述は、当該当事者又は参加人が直ちに取り消さないときは、自ら陳述したものとみなす。"
                }
              }
            ]
          },
          {
            "@Num": "8",
            "ArticleCaption": "（聴聞の期日における陳述の制限及び秩序維持）",
            "ArticleTitle": "第八条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "主宰者は、聴聞の期日に出頭した者が当該事案の範囲を超えて陳述するときその他議事を整理するためにやむを得ないと認めるときは、その者に対し、その陳述を制限することができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "主宰者は、前項に規定する場合のほか、聴聞の審理の秩序を維持するため、聴聞の審理を妨害し、又はその秩序を乱す者に対し退場を命ずる等適当な措置をとることができる。"
                }
              }
            ]
          },
          {
            "@Num": "9",
            "ArticleCaption": "（聴聞の期日における審理の公開）",
            "ArticleTitle": "第九条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "行政庁は、法第二十条第六項の規定により聴聞の期日における審理の公開を相当と認めたときは、聴聞の期日、場所及び事案の内容を公示するとともに、当事者及び参加人（その時までに法第十七条第一項の求めを受託し、又は同項の許可を受けている者に限る。）に対し、速やかに、その旨を通知するものとする。"
              }
            }
          },
          {
            "@Num": "10",
            "ArticleCaption": "（陳述書の提出の方法等）",
            "ArticleTitle": "第十条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第二十一条第一項の規定による陳述書の提出は、提出する者の氏名、住所、聴聞の件名及び当該聴聞に係る不利益処分の原因となる事実その他当該事案の内容についての意見を記載した書面により行うものとする。"
              }
            }
          },
          {
            "@Num": "11",
            "ArticleCaption": "（聴聞調書及び報告書の記載事項）",
            "ArticleTitle": "第十一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "聴聞調書には、次に掲げる事項（聴聞の期日における審理が行われなかった場合においては、第四号に掲げる事項を除く。）を記載し、主宰者がこれに記名押印しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "聴聞の件名"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "聴聞の期日及び場所"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "主宰者の氏名及び職名"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "聴聞の期日に出頭した当事者、参加人、代理人及び補佐人（以下この項において「聴聞関係者」という。）の氏名及び住所並びに行政庁の職員の氏名及び職名"
                    }
                  },
                  {
                    "@Num": "5",
                    "ItemTitle": "五",
                    "ItemSentence": {
                      "Sentence": "聴聞の期日に出頭しなかった聴聞関係者の氏名及び住所並びに当該聴聞関係者のうち当事者及び代理人については出頭しなかったことについての正当な理由の有無"
                    }
                  },
                  {
                    "@Num": "6",
                    "ItemTitle": "六",
                    "ItemSentence": {
                      "Sentence": "聴聞関係者及び行政庁の職員の陳述（法第二十一条第一項の規定により提出された陳述書における意見の陳述を含む。）の要旨"
                    }
                  },
                  {
                    "@Num": "7",
                    "ItemTitle": "七",
                    "ItemSentence": {
                      "Sentence": "証拠書類等が提出されたときは、その標目"
                    }
                  },
                  {
                    "@Num": "8",
                    "ItemTitle": "八",
                    "ItemSentence": {
                      "Sentence": "その他参考となるべき事項"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "聴聞調書には、書面、図画、写真その他主宰者が適当と認めるものを添付して調書の一部とすることができる。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "報告書には、次に掲げる事項を記載し、主宰者がこれに記名押印しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "意見"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "不利益処分の原因となる事実に対する当事者等の主張"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "理由"
                    }
                  }
                ]
              }
            ]
          },
          {
            "@Num": "12",
            "ArticleCaption": "（聴聞調書及び報告書の閲覧の手続）",
            "ArticleTitle": "第十二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第二十四条第四項の規定による閲覧の求めについては、当事者又は参加人は、その氏名、住所及び閲覧をしようとする聴聞調書又は報告書の件名を記載した書面を、聴聞の終結前にあっては主宰者に、聴聞の終結後にあっては行政庁に提出してこれを行うものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "主宰者又は行政庁は、閲覧を許可したときは、その場で閲覧させる場合を除き、速やかに、閲覧の日時及び場所を当該当事者又は参加人に通知しなければならない。"
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この府令は、内閣法の一部を改正する法律（平成十一年法律第八十八号）の施行の日（平成十三年一月六日）から施行する。"
          }
        }
      }
    }
  }
}
