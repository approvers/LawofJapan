    "LawNum": "平成二十四年復興庁令第一号",
    "LawBody": {
      "LawTitle": "復興庁組織規則",
      "EnactStatement": "復興庁設置法（平成二十三年法律第百二十五号）第十七条第五項の規定に基づき、並びに同法及び復興庁組織令（平成二十四年政令第二十二号）を実施するため、復興庁組織規則を次のように定める。",
      "TOC": {
        "TOCLabel": "目次",
        "TOCChapter": [
          {
            "@Num": "1",
            "ChapterTitle": "第一章　統括官"
          },
          {
            "@Num": "2",
            "ChapterTitle": "第二章　復興局"
          },
          {
            "@Num": "3",
            "ChapterTitle": "第三章　復興庁顧問及び復興庁参与"
          }
        ],
        "TOCSupplProvision": {
          "SupplProvisionLabel": "附則"
        }
      },
      "MainProvision": {
        "Chapter": [
          {
            "@Num": "1",
            "ChapterTitle": "第一章　統括官",
            "Article": {
              "@Num": "1",
              "ArticleCaption": "（企画官及び復興調整官）",
              "ArticleTitle": "第一条",
              "Paragraph": [
                {
                  "@Num": "1",
                  "ParagraphNum": null,
                  "ParagraphSentence": {
                    "Sentence": "復興庁に、企画官及び復興調整官を置く。"
                  }
                },
                {
                  "@Num": "2",
                  "ParagraphNum": "２",
                  "ParagraphSentence": {
                    "Sentence": "企画官は、命を受けて、参事官の職務のうち特定事項の調査、企画及び立案を助ける。"
                  }
                },
                {
                  "@Num": "3",
                  "ParagraphNum": "３",
                  "ParagraphSentence": {
                    "Sentence": "復興調整官は、命を受けて、参事官の職務のうち特定の地域に関する事項についての調整に関するものを助ける。"
                  }
                },
                {
                  "@Num": "4",
                  "ParagraphNum": "４",
                  "ParagraphSentence": {
                    "Sentence": "企画官の定数は、併任の者を除き四人と、復興調整官の定数は、二人とする。"
                  }
                },
                {
                  "@Num": "5",
                  "ParagraphNum": "５",
                  "ParagraphSentence": {
                    "Sentence": "併任の者である企画官は、その占める他の職が非常勤の職であるときは、非常勤とする。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "2",
            "ChapterTitle": "第二章　復興局",
            "Article": [
              {
                "@Num": "2",
                "ArticleCaption": "（所掌事務）",
                "ArticleTitle": "第二条",
                "Paragraph": {
                  "@Num": "1",
                  "ParagraphNum": null,
                  "ParagraphSentence": {
                    "Sentence": "復興局は、復興庁設置法第四条第一項第二号及び第三号並びに第二項各号に掲げる事務を分掌する。"
                  }
                }
              },
              {
                "@Num": "3",
                "ArticleCaption": "（復興局の次長及び参事官）",
                "ArticleTitle": "第三条",
                "Paragraph": [
                  {
                    "@Num": "1",
                    "ParagraphNum": null,
                    "ParagraphSentence": {
                      "Sentence": "各復興局に、それぞれ次長及び参事官を置く。"
                    }
                  },
                  {
                    "@Num": "2",
                    "ParagraphNum": "２",
                    "ParagraphSentence": {
                      "Sentence": "次長は、復興局長を助け、復興局の所掌事務を整理する。"
                    }
                  },
                  {
                    "@Num": "3",
                    "ParagraphNum": "３",
                    "ParagraphSentence": {
                      "Sentence": "参事官は、復興局長の命を受けて、復興局の所掌事務を分掌し、又は復興局の所掌事務に関する重要事項の審議に参画する。"
                    }
                  },
                  {
                    "@Num": "4",
                    "ParagraphNum": "４",
                    "ParagraphSentence": {
                      "Sentence": "次長の定数は、それぞれ一人（福島復興局にあっては、併任の者四人を除き一人）と、参事官の定数は、併任の者を除きそれぞれ六人（福島復興局にあっては、十二人）とする。"
                    }
                  },
                  {
                    "@Num": "5",
                    "ParagraphNum": "５",
                    "ParagraphSentence": {
                      "Sentence": "併任の者である参事官は、その占める他の職が非常勤の職であるときは、非常勤とする。"
                    }
                  }
                ]
              }
            ]
          },
          {
            "@Num": "3",
            "ChapterTitle": "第三章　復興庁顧問及び復興庁参与",
            "Article": [
              {
                "@Num": "4",
                "ArticleCaption": "（復興庁顧問）",
                "ArticleTitle": "第四条",
                "Paragraph": [
                  {
                    "@Num": "1",
                    "ParagraphNum": null,
                    "ParagraphSentence": {
                      "Sentence": "復興庁に、復興庁顧問を置くことができる。"
                    }
                  },
                  {
                    "@Num": "2",
                    "ParagraphNum": "２",
                    "ParagraphSentence": {
                      "Sentence": "復興庁顧問は、復興庁の所掌事務のうち重要な施策に参画する。"
                    }
                  },
                  {
                    "@Num": "3",
                    "ParagraphNum": "３",
                    "ParagraphSentence": {
                      "Sentence": "復興庁顧問は、非常勤とする。"
                    }
                  }
                ]
              },
              {
                "@Num": "5",
                "ArticleCaption": "（復興庁参与）",
                "ArticleTitle": "第五条",
                "Paragraph": [
                  {
                    "@Num": "1",
                    "ParagraphNum": null,
                    "ParagraphSentence": {
                      "Sentence": "復興庁に、復興庁参与を置くことができる。"
                    }
                  },
                  {
                    "@Num": "2",
                    "ParagraphNum": "２",
                    "ParagraphSentence": {
                      "Sentence": "復興庁参与は、復興庁の所掌事務のうち重要な事項に参与する。"
                    }
                  },
                  {
                    "@Num": "3",
                    "ParagraphNum": "３",
                    "ParagraphSentence": {
                      "Sentence": "復興庁参与は、非常勤とする。"
                    }
                  }
                ]
              }
            ]
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Article": [
            {
              "@Num": "1",
              "ArticleCaption": "（施行期日）",
              "ArticleTitle": "第一条",
              "Paragraph": {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "この庁令は、公布の日から施行する。"
                }
              }
            },
            {
              "@Num": "2",
              "ArticleCaption": "（企画官等に係る特例）",
              "ArticleTitle": "第二条",
              "Paragraph": {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "平成二十四年三月三十一日までの間、第一条第一項の企画官（併任の者を除く。）及び同項の復興調整官並びに第三条第一項の次長及び同項の参事官（併任の者を除く。）は、関係のある他の職を占める者をもって充てられるものとする。"
                }
              }
            }
          ]
        },
