{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "Act",
    "@Num": "118",
    "@Year": "40",
    "LawNum": "昭和四十年法律第百十八号",
    "LawBody": {
      "LawTitle": "地方公共団体の議会の解散に関する特例法",
      "MainProvision": {
        "Article": [
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "1",
            "ArticleCaption": "（この法律の趣旨）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "この法律は、地方公共団体の議会の解散の請求に関する世論の動向にかんがみ、当該議会が自らすすんでその解散による選挙によつてあらたに当該地方公共団体の住民の意思をきく方途を講ずるため、地方公共団体の議会の解散について、地方自治法（昭和二十二年法律第六十七号）の特例を定めるものとする。"
                }
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "2",
            "ArticleCaption": "（議会の解散）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Hide": "false",
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "地方公共団体の議会は、当該議会の解散の議決をすることができる。"
                  }
                }
              },
              {
                "@Hide": "false",
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "前項の規定による解散の議決については、議員数の四分の三以上の者が出席し、その五分の四以上の者の同意がなければならない。"
                  }
                }
              },
              {
                "@Hide": "false",
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "第一項の議決があつたときは、当該地方公共団体の議会は、その時において解散するものとする。"
                  }
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": [
          {
            "@Hide": "false",
            "@Num": "1",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この法律は、公布の日から施行する。"
              }
            }
          },
          {
            "@Hide": "false",
            "@Num": "2",
            "ParagraphNum": "２",
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "地方公共団体の議会の議決による解散に関する制度については、この法律の施行の日から起算して一年以内に検討を加え、その結果に基づいて必要な措置が講ぜられるものとする。"
              }
            }
          }
        ]
      }
    }
  }
}
