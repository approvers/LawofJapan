{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "57",
    "@Year": "25",
    "LawNum": "平成二十五年総務省令第五十七号",
    "LawBody": {
      "LawTitle": "国家公務員退職手当法施行令第四条の二の規定による退職の理由の記録に関する内閣官房令",
      "EnactStatement": "国家公務員退職手当法施行令（昭和二十八年政令第二百十五号）第四条の二の規定に基づき、国家公務員退職手当法施行令第四条の二の規定による退職の理由の記録に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（退職理由記録の記載事項等）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "国家公務員退職手当法施行令第四条の二の規定により作成する同令第三条各号（第一号中任期を終えて退職した者に係る部分及び第二号を除く。）に掲げる者の退職の理由の記録（以下「退職理由記録」という。）には、次に掲げる事項を記載しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "作成年月日"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "氏名及び生年月日"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "退職の日における勤務官署又は事務所及び職名"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "勤続期間並びに採用年月日及び退職年月日"
                    }
                  },
                  {
                    "@Num": "5",
                    "ItemTitle": "五",
                    "ItemSentence": {
                      "Sentence": "退職の理由及び当該退職の理由に該当するに至った経緯"
                    }
                  },
                  {
                    "@Num": "6",
                    "ItemTitle": "六",
                    "ItemSentence": {
                      "Sentence": "作成者の職名及び氏名"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "退職理由記録の様式は、別記様式とする。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "退職理由記録には、職員が提出した辞職の申出の書面の写しを添付しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（作成時期）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "退職理由記録は、職員の退職後速やかに作成しなければならない。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（保管）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "退職理由記録は、国家公務員退職手当法（昭和二十八年法律第百八十二号）第八条の二第一項に規定する各省各庁の長等が保管する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "退職理由記録は、その作成の日から五年間保管しなければならない。"
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Num": "1",
              "ParagraphCaption": "（施行期日）",
              "ParagraphNum": "１",
              "ParagraphSentence": {
                "Sentence": "この省令は、平成二十五年十一月一日から施行する。"
              }
            },
            {
              "@Num": "2",
              "ParagraphCaption": "（退職勧奨の記録に関する省令の廃止）",
              "ParagraphNum": "２",
              "ParagraphSentence": {
                "Sentence": "退職勧奨の記録に関する省令（昭和六十年総理府令第十一号）は、廃止する。"
              }
            },
            {
              "@Num": "3",
              "ParagraphCaption": "（経過措置）",
              "ParagraphNum": "３",
              "ParagraphSentence": {
                "Sentence": "前項の規定により廃止された退職勧奨の記録に関する省令の規定により作成された退職勧奨の記録の保管については、なお従前の例による。"
              }
            }
          ]
        },
        {
          "@AmendLawNum": "平成二六年五月二九日総務省令第五二号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphCaption": "（施行期日）",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この省令は、国家公務員法等の一部を改正する法律（平成二十六年法律第二十二号）の施行の日（平成二十六年五月三十日）から施行する。"
            }
          }
        }
      ],
