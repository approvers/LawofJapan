{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "51",
    "@Year": "25",
    "LawNum": "平成二十五年内閣府令第五十一号",
    "LawBody": {
      "LawTitle": "大規模災害からの復興に関する法律施行規則",
      "EnactStatement": "大規模災害からの復興に関する法律（平成二十五年法律第五十五号）及び大規模災害からの復興に関する法律施行令（平成二十五年政令第二百三十七号）の規定に基づき、並びに同法を実施するため、大規模災害からの復興に関する法律施行規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（復興計画の作成等）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "特定被災市町村は、その区域の全部又は一部が大規模災害からの復興に関する法律（以下「法」という。）第十条第一項各号に掲げる地域のいずれに該当するかを明らかにして、復興計画を作成するものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "法第十条第一項第三号に掲げる地域に該当する地域をその区域とする特定被災市町村（同項第一号又は第二号に掲げる地域に該当する地域をその区域とするものを除く。）は、同項第一号又は第二号に掲げる地域をその区域とする特定被災市町村等からの要請を受けて復興計画を作成するものとする。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（土地利用方針の記載事項）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第十条第二項第三号の内閣府令で定める事項は、次に掲げるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "復興計画の区域における土地利用の基本的方向"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "復興整備事業（法第十条第二項第四号に規定する復興整備事業をいう。以下次条第二項、第四条及び第七条において同じ。）のおおむねの区域を表示した縮尺二万五千分の一以上の地形図"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（復興整備事業に係る記載事項）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第十条第二項第四号の内閣府令で定める事項は、名称、実施主体、実施区域、実施予定期間及び同号イ、ロ、ハ又はヘに掲げる事業にあっては種類とする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項に定める事項のほか、特定被災市町村等は、法第十条第二項第四号の内閣府令で定める事項として実施期間及び事業費に関する事項その他の復興整備事業に関する事項を記載することができる。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（内閣府令で定める軽微な変更）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第十条第七項の内閣府令で定める軽微な変更は、次に掲げるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "地域の名称の変更又は地番の変更に伴う範囲の変更"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "前条第二項並びに法第十二条第一項、第十三条第四項、第十五条第一項、第十六条第三項、第十七条第二項、第十八条第一項及び第八項、第十九条第一項並びに第二十条第一項の規定による復興整備事業に係る記載事項の追加又は変更であって、復興整備事業の趣旨の変更を伴わないもの"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "復興整備事業の実施期間に影響を与えない場合における復興計画の期間の六月以内の変更"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "前三号に掲げるもののほか、復興計画の趣旨の変更を伴わない変更"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（復興協議会の公表）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第十一条第七項の規定による公表は、復興協議会（以下次条第二号において「協議会」という。）の名称及び構成員の氏名又は名称について行うものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の規定による公表は、特定被災市町村等の公報への掲載、インターネットの利用その他の適切な方法により行うものとする。"
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（会議における協議が困難な場合の理由）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第十二条第二項の内閣府令で定める理由は、次に掲げるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "法第十一条第一項の協議を行うための会議（以下この条において単に「会議」という。）を開催しないことについて、災害の発生により会議の開催が困難であることその他の合理的な理由があること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "法第十一条第四項ただし書の規定により、会議に係る同項各号に定める者が協議会の構成員として加えられていないこと。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "病気その他やむを得ない事情により、会議に前号の者が出席することができないこと。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（届出対象区域の公示）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": [
                  {
                    "@Num": "1",
                    "#text": "法第二十八条第二項の規定による公示は、届出対象区域（同条第一項に規定する届出対象区域をいう。）及び当該区域に係る復興整備事業の内容を明示して、特定被災市町村の公報に掲載して行うものとする。"
                  },
                  {
                    "@Num": "2",
                    "#text": "この場合において、当該届出対象区域の明示については、次のいずれかによることとする。"
                  }
                ]
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "市町村、大字、字、小字及び地番"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "平面図"
                  }
                }
              ]
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（届出対象区域内における行為の届出）",
            "ArticleTitle": "第八条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第二十八条第四項の規定による届出は、別記様式第一の一による届出書を提出して行うものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "前項の届出書には、次に掲げる図書を添付しなければならない。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "ただし、特定被災市町村の長が、これらの図書を得ることができない正当な理由があると認める場合においては、この限りでない。"
                    }
                  ]
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "土地の区画形質の変更にあっては、次に掲げる図面"
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Sentence": "当該行為を行う土地の区域を表示する図面で縮尺二千五百分の一以上のもの"
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Sentence": "設計図で縮尺千分の一以上のもの"
                        }
                      }
                    ]
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "建築物その他の工作物（以下この号において「建築物等」という。）の新築、改築、増築若しくは移転又は用途の変更にあっては、次に掲げる図面"
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Sentence": "敷地内における建築物等の位置を表示する図面で縮尺五百分の一以上のもの"
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Sentence": "二面以上の建築物等の断面図で縮尺二百分の一以上のもの"
                        }
                      }
                    ]
                  }
                ]
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "前項第一号ロの設計図は、土地の区画形質の変更後における公共の用に供する施設の位置及び形状を、当該土地の形質の変更により新設し、又は変更される部分と既設のもので変更されない部分とに区別して表示したものでなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "9",
            "ArticleCaption": "（届出の対象となる事項）",
            "ArticleTitle": "第九条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第二十八条第四項の内閣府令で定める事項は、行為の完了予定日とする。"
              }
            }
          },
          {
            "@Num": "10",
            "ArticleCaption": "（変更の届出）",
            "ArticleTitle": "第十条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第二十八条第五項の内閣府令で定める事項は、行為の設計又は施行方法のうち、その変更により同条第四項の届出に係る行為が同項各号に掲げる行為に該当することとなるもの以外のものとする。"
              }
            }
          },
          {
            "@Num": "11",
            "ArticleCaption": "（変更届出手続）",
            "ArticleTitle": "第十一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第二十八条第五項の規定による届出は、別記様式第一の二による変更届出書を提出して行うものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "第八条第二項の規定は、前項の届出について準用する。"
                }
              }
            ]
          },
          {
            "@Num": "12",
            "ArticleCaption": "（収用委員会に対する裁決申請書の様式）",
            "ArticleTitle": "第十二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "大規模災害からの復興に関する法律施行令第五条の内閣府令で定める様式は、別記様式第二とする。"
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この府令は、法附則第一条ただし書に規定する規定の施行の日（平成二十五年八月二十日）から施行する。"
          }
        }
      },
