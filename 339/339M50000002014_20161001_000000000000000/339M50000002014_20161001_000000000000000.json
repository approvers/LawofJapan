{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "14",
    "@Year": "39",
    "LawNum": "昭和三十九年総理府令第十四号",
    "LawBody": {
      "LawTitle": "都道府県警察に無償使用させる警察用の国有財産及び国有物品の取扱いに関する内閣府令",
      "EnactStatement": "都道府県警察に無償使用させる警察用の国有財産及び国有物品の取扱いに関する総理府令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（用語の意義）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この府令において、次の各号に掲げる用語の意義は、当該各号に定めるところによる。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Column": [
                      {
                        "@Num": "1",
                        "Sentence": "財産"
                      },
                      {
                        "@Num": "2",
                        "Sentence": "警察法（昭和二十九年法律第百六十二号）第七十八条第一項の規定により都道府県警察に無償使用させる国有財産をいう。"
                      }
                    ]
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Column": [
                      {
                        "@Num": "1",
                        "Sentence": "物品"
                      },
                      {
                        "@Num": "2",
                        "Sentence": "警察法第七十八条第一項の規定により都道府県警察に無償使用させる国有の物品をいう。"
                      }
                    ]
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Column": [
                      {
                        "@Num": "1",
                        "Sentence": "部局長"
                      },
                      {
                        "@Num": "2",
                        "Sentence": "都道府県警察に対し、財産を無償使用させる部局長（国有財産法（昭和二十三年法律第七十三号）第九条第一項に規定する部局等の長をいう。）をいう。"
                      }
                    ]
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Column": [
                      {
                        "@Num": "1",
                        "Sentence": "物品管理官"
                      },
                      {
                        "@Num": "2",
                        "Sentence": "都道府県警察に対し、物品を無償使用させる物品管理官、分任物品管理官、物品管理官代理及び分任物品管理官代理をいう。"
                      }
                    ]
                  }
                }
              ]
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（無償使用の申請）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警視総監、道府県警察本部長及び方面本部長（以下「警察本部長」という。）は、財産又は物品（以下「財産等」という。）を無償使用しようとするときは、種類、数量等を明らかにし、部局長又は物品管理官（以下「部局長等」という。）に無償使用の申請をしなければならない。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（無償使用の許可）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "部局長等は、前条の規定による申請を受けた場合において許可するときは、種類、数量、使用条件等を明らかにして、するものとする。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（無償使用の条件）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警察本部長は、無償使用する財産等について、次に掲げる事項を守らなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "善良な管理者の注意をもつて管理し、その効率的な使用に努めること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "修繕、改造等により現状を変更しようとするときは、あらかじめ部局長等の承認を受けること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "改良費等の有益費を請求しないこと。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "転貸し、又は担保に供さないこと。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "使用条件に違反したときは、部局長等の指示に従つて返還すること。"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "部局長等が特に必要があると認めたときは、その指示に従つて返還すること。"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "その他部局長等が必要があると認めて付した条件"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（財産等の管理）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警察本部長は、無償使用する財産等を管理するものとする。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（現状変更等）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "警察本部長は、無償使用する財産について都道府県が支弁する経費をもつて現状変更等をしようとするときは、次に掲げる事項を記載した申請書を部局長に提出しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "当該財産の所在地名及び地番"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "新増築その他現状を変更しようとする理由"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "用途及び利用計画"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "新増築その他現状を変更しようとする財産の明細（構造、種目及び数量を記載すること。）"
                    }
                  },
                  {
                    "@Num": "5",
                    "ItemTitle": "五",
                    "ItemSentence": {
                      "Sentence": "予定価格"
                    }
                  },
                  {
                    "@Num": "6",
                    "ItemTitle": "六",
                    "ItemSentence": {
                      "Sentence": "予算額及び経費の支出科目"
                    }
                  },
                  {
                    "@Num": "7",
                    "ItemTitle": "七",
                    "ItemSentence": {
                      "Sentence": "案内図、配置図及び建物図"
                    }
                  },
                  {
                    "@Num": "8",
                    "ItemTitle": "八",
                    "ItemSentence": {
                      "Sentence": "その他参考となるべき事項"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Num": "1",
                      "#text": "部局長は、前項の申請書を受理したときは、使用目的に反しない限り、許可することができる。"
                    },
                    {
                      "@Num": "2",
                      "#text": "この場合においては、あらかじめ警察庁長官の承認を得なければならない。"
                    }
                  ]
                }
              }
            ]
          },
          {
            "@Num": "7",
            "ArticleCaption": "（建物の区分所有）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警察本部長は、前条の規定により無償使用する建物に増築する場合には、既設建物との間に明確に区分所有ができるような処置を講じなければならない。"
              }
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（保管の原則）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": [
                  {
                    "@Function": "main",
                    "@Num": "1",
                    "#text": "物品は、公用の施設において、良好な状態で常に供用（物品をその用途に応じて都道府県警察において使用させることをいう。以下同じ。）又は返還をすることができるように保管しなければならない。"
                  },
                  {
                    "@Function": "proviso",
                    "@Num": "2",
                    "#text": "ただし、警察本部長が公用の施設において保管することが管理上不適当であると認めるときは、他の施設に保管することができる。"
                  }
                ]
              }
            }
          },
          {
            "@Num": "9",
            "ArticleCaption": "（出納命令）",
            "ArticleTitle": "第九条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警察本部長は、物品を出納させようとするときは、出納すべき物品の分類を明らかにして、その出納を命じなければならない。"
              }
            }
          },
          {
            "@Num": "10",
            "ArticleCaption": "（供用不適品の処理）",
            "ArticleTitle": "第十条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "警察本部長は、その保管中の物品のうち供用できないもの又は修繕若しくは改造を要するものがあると認めるときは、当該経費の負担区分に従い物品管理官又は都道府県において支出負担行為事務を行なう職員に対し、修繕又は改造の請求をしなければならない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "警察本部長は、供用できない物品があると認めるときは、すみやかに物品管理官に返還しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "11",
            "ArticleCaption": "（供用の原則）",
            "ArticleTitle": "第十一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "物品は、物品管理官が決定した分類の目的に従い、供用しなければならない。"
              }
            }
          },
          {
            "@Num": "12",
            "ArticleCaption": "（分類換え）",
            "ArticleTitle": "第十二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警察本部長は、物品の効率的な供用のため必要があると認めるときは、物品管理官に分類換えの請求をすることができる。"
              }
            }
          },
          {
            "@Num": "13",
            "ArticleCaption": "（弁償）",
            "ArticleTitle": "第十三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "部局長等は、都道府県警察の責に帰すべき理由により財産等を亡失し、又は損傷し、その他国に損害を与えたときは、都道府県警察に、その損害を弁償させなければならない。"
              }
            }
          },
          {
            "@Num": "14",
            "ArticleCaption": "（弁償額）",
            "ArticleTitle": "第十四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "前条の規定により弁償すべき国の損害の額は、財産等の亡失又は損傷の場合にあつては、亡失した財産等の価格又は損傷による財産等の減価額とし、その他の場合にあつては、当該財産等の管理行為に関し通常生ずべき損害の額とする。"
              }
            }
          },
          {
            "@Num": "15",
            "ArticleCaption": "（亡失又は損傷等の報告）",
            "ArticleTitle": "第十五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警察本部長は、財産等を亡失し、又は損傷し、その他国に損害を与えたと認めるときは、直ちに部局長等に報告しなければならない。"
              }
            }
          },
          {
            "@Num": "16",
            "ArticleCaption": "（実地監査等）",
            "ArticleTitle": "第十六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "警察庁長官は、部局長等に対し、随時、所部の職員を派遣して無償使用させた財産等について実地監査を行ない、及び必要な指示をすることができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "部局長等は、警察本部長に対し、無償使用させた財産等について毎年度一回検査を行なうものとし、その他必要と認めるときは、検査を行ない、所要の報告を求め、又は必要な指示をすることができる。"
                }
              }
            ]
          },
          {
            "@Num": "17",
            "ArticleCaption": "（けん銃の取扱い）",
            "ArticleTitle": "第十七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "けん銃の取扱いについては、この府令の定めによるもののほか、国家公安委員会規則で定めるところによる。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Num": "1",
              "ParagraphNum": "１",
              "ParagraphSentence": {
                "Sentence": "この府令は、昭和三十九年四月一日から施行する。"
              }
            },
            {
              "@Num": "2",
              "ParagraphNum": "２",
              "ParagraphSentence": {
                "Sentence": "この府令施行の際、現に都道府県警察において無償使用している財産等は、第三条の規定により許可を受けたものとみなす。"
              }
            }
          ]
        },
        {
          "@AmendLawNum": "昭和四六年一二月二二日総理府令第五八号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この府令は、公布の日から施行し、改正後の都道府県警察に無償使用させる警察用の国有財産及び国有物品の取扱いに関する総理府令の規定は、昭和四十六年十一月三十日から適用する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年八月一四日総理府令第八九号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphCaption": "（施行期日）",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この府令は、内閣法の一部を改正する法律（平成十一年法律第八十八号）の施行の日（平成十三年一月六日）から施行する。"
            }
          }
        }
      ]
    }
  }
}
