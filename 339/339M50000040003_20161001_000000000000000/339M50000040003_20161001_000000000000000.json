{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "003",
    "@Year": "39",
    "LawNum": "昭和三十九年大蔵省令第三号",
    "LawBody": {
      "LawTitle": "スイス貨公債の発行等に関する省令",
      "EnactStatement": "外貨公債の発行に関する法律第三条の規定に基づき、スイス貨公債の発行等に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（総則）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "外貨公債の発行に関する法律（昭和三十八年法律第六十三号）第一条第一項の規定により発行する公債のうち、スイス連邦通貨をもつて表示する公債（以下「スイス貨公債」という。）の発行等に関しては、別に定める場合を除き、この省令の定めるところによる。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（日本銀行の事務取扱上の地位）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "スイス貨公債の発行、償還、利子支払及び証券に関する事務を日本銀行が取り扱う場合は、日本銀行を財務大臣の代理人とする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "日本銀行は、財務大臣の指名する者をして、前項に規定する事務の取扱いを行なわせることができる。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（証券の形式等）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "スイス貨公債に対しては、無記名利札付証券（以下「証券」という。）を発行する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項に規定する証券を発行するまでの間スイス貨公債に対しては、発行総額を額面金額とする仮証券を発行することができる。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（汚染又はき損による引換えの請求）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "証券が汚染又はき損したときは、当該証券の債権者は、その引換えを請求することができる。"
              }
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（滅紛失証券に対する元利払の請求等）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "証券を滅失又は紛失したときは、当該証券の債権者は、スイス連邦の法令に従い、償還期日の到来したものにあつては当該証券に係る元金の支払を、償還期日未到来のものにあつては代証券の交付を請求することができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "利子支払期日の到来した利札を滅失又は紛失したときは、当該利札の債権者は、第二条第二項に規定する財務大臣の指名する者が認める場合に限り、当該利札に係る利子の支払を請求することができる。"
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（実施規定）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令に定めるもののほか、この省令の実施に関し必要な事項は、別に財務大臣が定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年八月二一日大蔵省令第六九号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この省令は、平成十三年一月六日から施行する。"
            }
          }
        }
      ]
    }
  }
}
