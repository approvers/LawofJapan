    "@LawType": "MinisterialOrdinance",
    "@Num": "032",
    "@Year": "39",
    "LawNum": "昭和三十九年大蔵省令第三十二号",
    "LawBody": {
      "LawTitle": "ドイツ貨公債の発行等に関する省令",
      "EnactStatement": "外貨公債の発行に関する法律第三条の規定に基づき、ドイツ貨公債の発行等に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（総則）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "外貨公債の発行に関する法律（昭和三十八年法律第六十三号）第一条第一項の規定により発行する公債のうち、ドイツ連邦共和国通貨をもつて表示する公債（以下「ドイツ貨公債」という。）の発行等に関しては、別に定める場合を除き、この省令の定めるところによる。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（日本銀行の事務取扱上の地位）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "ドイツ貨公債の発行、償還、利子支払及び証券に関する事務を日本銀行が取り扱う場合は、日本銀行を財務大臣の代理人とする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "日本銀行は、財務大臣の指名する者をして、前項に規定する事務の取扱いを行なわせることができる。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（証券の形式等）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "ドイツ貨公債に対しては、利札（利札引換票を含む。以下第四条及び第六条において同じ。）付の無記名証券（以下「証券」という。）を発行する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項に規定する証券を発行するまでの間ドイツ貨公債に対しては、発行総額を額面金額とする仮証券を発行することができる。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（汚染又はき損による引換えの請求）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "証券又は利札が汚染又はき損したときは、当該証券又は利札の債権者は、ドイツ連邦共和国の法令又は慣習に従い、その引換えを請求することができる。"
              }
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（滅紛失証券に対する代証券の交付請求等）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "証券又は利札引換票を滅失又は紛失したときは、当該証券又は利札引換票の債権者は、ドイツ連邦共和国の法令に従い、代証券又は代利札の交付を請求することができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "利札を滅失又は紛失したときは、当該利札の債権者は、ドイツ連邦共和国の法令に従い、当該利札に係る金額の支払を請求することができる。"
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（元金支払の場合の特則等）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "ドイツ貨公債の元金を支払う場合において、当該証券に係る支払期日未到来の利札が欠けているときは、当該欠けている利札に相当する金額を支払うべき元金から控除する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項に規定する利札の所持人は、当該利札の支払期日が到来しなければ、当該利札に係る金額の支払を請求することができない。"
                }
              }
            ]
          },
          {
            "@Num": "7",
            "ArticleCaption": "（元金の償還等）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "ドイツ貨公債の元金については、償還期日の到来した年の翌年から十年、利子については、支払期日の到来した年（前条第二項に規定する利札に係る金額については、当該利札の支払期日が到来した年）の翌年から四年を経過した後は、その償還又は支払の請求をすることができない。"
              }
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（実施規定）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令に定めるもののほか、この省令の実施に関し必要な事項は、別に財務大臣が定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年八月二一日大蔵省令第六九号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この省令は、平成十三年一月六日から施行する。"
            }
          }
        }
      ]
    }
  }
}
