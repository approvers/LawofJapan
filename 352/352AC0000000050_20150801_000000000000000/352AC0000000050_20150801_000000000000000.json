{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "Act",
    "@Num": "50",
    "@Year": "52",
    "LawNum": "昭和五十二年法律第五十号",
    "LawBody": {
      "LawTitle": "昭和五十二年度の公債の発行の特例に関する法律",
      "MainProvision": {
        "Article": [
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "1",
            "ArticleCaption": "（趣旨）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "この法律は、昭和五十二年度の租税収入の動向等にかんがみ、同年度の財政運営に必要な財源を確保し、もつて国民生活と国民経済の安定に資するため、同年度の公債の発行の特例に関する措置を定めるものとする。"
                }
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "2",
            "ArticleCaption": "（特例公債の発行）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "政府は、財政法（昭和二十二年法律第三十四号）第四条第一項ただし書の規定により発行する公債のほか、昭和五十二年度の一般会計歳出の財源に充てるため、予算をもつて国会の議決を経た金額の範囲内で、公債を発行することができる。"
                }
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "3",
            "ArticleCaption": "（特例公債に係る発行時期及び会計年度所属区分の特例）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": [
                  {
                    "@Num": "1",
                    "@WritingMode": "vertical",
                    "#text": "前条の規定による公債の発行は、昭和五十三年五月三十一日までの間、行うことができる。"
                  },
                  {
                    "@Num": "2",
                    "@WritingMode": "vertical",
                    "#text": "この場合において、同年四月一日以後発行される同条の公債に係る収入は、昭和五十二年度所属の歳入とする。"
                  }
                ]
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "4",
            "ArticleCaption": "（償還計画の国会への提出）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "政府は、第二条の議決を経ようとするときは、同条の公債の償還の計画を国会に提出しなければならない。"
                }
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "@Extract": "false",
        "@Type": "New",
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Hide": "false",
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": {
              "@WritingMode": "vertical",
              "#text": "この法律は、公布の日から施行する。"
            }
          }
        }
      }
    }
  }
}
