{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "015",
    "@Year": "31",
    "LawNum": "昭和三十一年労働省令第十五号",
    "LawBody": {
      "LawTitle": "中小企業労働実態調査規則　抄",
      "EnactStatement": "統計法（昭和二十二年法律第十八号）第三条第二項の規定に基き、中小企業労働実態調査規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（命令の趣旨）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "統計法（昭和二十二年法律第十八号）の指定統計である中小企業労働実態調査（指定統計第八十八号）の施行に関しては、この規則の定めるところによる。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（調査の目的）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "中小企業労働実態調査（以下「中小企業調査」という。）は、中小企業における労働条件及び労使関係の実態並びにその要因を明らかにすることを目的とする。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（定義）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "この規則で「事業所」とは、経済的活動の行われている一定の場所をいう。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "この規則で「事業主」とは、事業所を事実上管理する者をいう。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（調査の時期）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "中小企業調査は、昭和三十一年六月三十日現在により行う。"
              }
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（調査の範囲）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "中小企業調査は、昭和二十六年統計委員会告示第六号に定める日本標準産業分類による製造業中別表に掲げる産業に属し、常時五人以上の常用労働者を雇用する民営事業所のうち一定の方法により抽出された事業所について行う。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（調査事項）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "中小企業調査は、左に掲げる事項について行う。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "事業所名"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "事業所の所在地"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "昭和三十年における主要生産品名"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "昭和三十年一月から十二月までの間における常用労働者の数、延出勤日数及び現金給与額並びに臨時又は日雇労働者の延人員及び現金給与総額並びに個人企業における家族従業者数"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "昭和三十一年六月における労働者の種類及び性別常用労働者の数、延出勤日数、実労働時間数並びに現金給与額並びに臨時又は日雇労働者の延人員及び現金給与総額並びに常用労働者中の住込労働者数並びに個人企業における家族従業者数"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "昭和三十年における現物給与評価額"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "昭和三十年における健康保険、労働者災害補償保険、失業保険、厚生年金保険における事業主の負担する保険料等の額及び労働者のための福利厚生費"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "退職金制度"
                  }
                },
                {
                  "@Num": "9",
                  "ItemTitle": "九",
                  "ItemSentence": {
                    "Sentence": "熟練工養成制度"
                  }
                },
                {
                  "@Num": "10",
                  "ItemTitle": "十",
                  "ItemSentence": {
                    "Sentence": "労働組合"
                  }
                },
                {
                  "@Num": "11",
                  "ItemTitle": "十一",
                  "ItemSentence": {
                    "Sentence": "会社の親睦会"
                  }
                },
                {
                  "@Num": "12",
                  "ItemTitle": "十二",
                  "ItemSentence": {
                    "Sentence": "苦情処理制度"
                  }
                },
                {
                  "@Num": "13",
                  "ItemTitle": "十三",
                  "ItemSentence": {
                    "Sentence": "昭和三十年七月から昭和三十一年六月までの間における労働争議状況"
                  }
                },
                {
                  "@Num": "14",
                  "ItemTitle": "十四",
                  "ItemSentence": {
                    "Sentence": "企業経営状況（法人企業にあつては、昭和三十一年三月末日に最も近い決算期日からさかのぼる一年間、個人企業にあつては、昭和三十年における経営状況）"
                  }
                }
              ]
            }
          },
          {
            "@Num": "14",
            "ArticleCaption": "（関係書類の保存期間及び保存責任者）",
            "ArticleTitle": "第十四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "労働大臣は、中小企業調査の調査票を調査期日から三年間保存しなければならない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "厚生労働大臣は、中小企業調査の結果原表を永久に保存しなければならない。"
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年一〇月三一日労働省令第四一号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、内閣法の一部を改正する法律（平成十一年法律第八十八号）の施行の日（平成十三年一月六日）から施行する。"
              }
            }
          }
        }
      ]
    }
  }
}
