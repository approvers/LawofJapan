    "LawNum": "昭和八年法律第四十二号",
    "LawBody": {
      "LawTitle": "昭和八年法律第四十二号（身元保証ニ関スル法律）",
      "MainProvision": {
        "Article": [
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "1",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "引受、保証其ノ他名称ノ如何ヲ問ハズ期間ヲ定メズシテ被用者ノ行為ニ因リ使用者ノ受ケタル損害ヲ賠償スルコトヲ約スル身元保証契約ハ其ノ成立ノ日ヨリ三年間其ノ効力ヲ有ス但シ商工業見習者ノ身元保証契約ニ付テハ之ヲ五年トス"
                }
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "2",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Hide": "false",
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "身元保証契約ノ期間ハ五年ヲ超ユルコトヲ得ズ若シ之ヨリ長キ期間ヲ定メタルトキハ其ノ期間ハ之ヲ五年ニ短縮ス"
                  }
                }
              },
              {
                "@Hide": "false",
                "@Num": "2",
                "ParagraphNum": "○２",
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "身元保証契約ハ之ヲ更新スルコトヲ得但シ其ノ期間ハ更新ノ時ヨリ五年ヲ超ユルコトヲ得ズ"
                  }
                }
              }
            ]
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "3",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "使用者ハ左ノ場合ニ於テハ遅滞ナク身元保証人ニ通知スベシ"
                }
              },
              "Item": [
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "被用者ニ業務上不適任又ハ不誠実ナル事跡アリテ之ガ為身元保証人ノ責任ヲ惹起スル虞アルコトヲ知リタルトキ"
                    }
                  }
                },
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "被用者ノ任務又ハ任地ヲ変更シ之ガ為身元保証人ノ責任ヲ加重シ又ハ其ノ監督ヲ困難ナラシムルトキ"
                    }
                  }
                }
              ]
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "4",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "身元保証人前条ノ通知ヲ受ケタルトキハ将来ニ向テ契約ノ解除ヲ為スコトヲ得身元保証人自ラ前条第一号及第二号ノ事実アリタルコトヲ知リタルトキ亦同ジ"
                }
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "5",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "裁判所ハ身元保証人ノ損害賠償ノ責任及其ノ金額ヲ定ムルニ付被用者ノ監督ニ関スル使用者ノ過失ノ有無、身元保証人ガ身元保証ヲ為スニ至リタル事由及之ヲ為スニ当リ用ヰタル注意ノ程度、被用者ノ任務又ハ身上ノ変化其ノ他一切ノ事情ヲ斟酌ス"
                }
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "6",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "本法ノ規定ニ反スル特約ニシテ身元保証人ニ不利益ナルモノハ総テ之ヲ無効トス"
                }
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "@Extract": "true",
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Hide": "false",
          "@Num": "1",
          "ParagraphNum": "○１",
          "ParagraphSentence": {
            "Sentence": {
              "@WritingMode": "vertical",
              "#text": "本法施行ノ期日ハ勅令ヲ以テ之ヲ定ム"
            }
          }
        }
      }
    }
  }
}
