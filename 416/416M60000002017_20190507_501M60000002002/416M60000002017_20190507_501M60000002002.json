            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この府令は、公認会計士法等の一部を改正する法律の施行の日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "令和元年五月七日内閣府令第二号",
          "@Type": "Amend",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Hide": "false",
