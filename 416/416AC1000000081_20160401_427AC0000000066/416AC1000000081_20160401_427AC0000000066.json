                        "@Num": "1",
                        "ItemTitle": "一",
                        "ItemSentence": {
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "当該コンテンツに係る知的財産権については、その種類その他の情報を国に報告することを受託者等が約すること。"
                          }
                        }
