{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "17",
    "@Year": "16",
    "LawNum": "平成十六年文部科学省令第十七号",
    "LawBody": {
      "LawTitle": "国立高等専門学校の授業料その他の費用に関する省令",
      "EnactStatement": "独立行政法人国立高等専門学校機構法（平成十五年法律第百十三号）第十二条第三項の規定に基づき、国立高等専門学校の授業料その他の費用に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（趣旨）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "国立高等専門学校の授業料その他の費用に関しては、この省令の定めるところによる。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（授業料、入学料及び検定料の標準額等）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "国立高等専門学校の授業料の年額、入学料及び入学等に係る検定料は、次の各号に掲げる区分に応じ、それぞれ当該各号に定める額を標準として、独立行政法人国立高等専門学校機構（以下「機構」という。）が定める。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Column": [
                        {
                          "@Num": "1",
                          "Sentence": "授業料の年額"
                        },
                        {
                          "@Num": "2",
                          "Sentence": "二三四、六〇〇円（商船に関する学科の在学期間が六月の最終の学年にあっては、一一七、三〇〇円）"
                        }
                      ]
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Column": [
                        {
                          "@Num": "1",
                          "Sentence": "入学料"
                        },
                        {
                          "@Num": "2",
                          "Sentence": "八四、六〇〇円"
                        }
                      ]
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Column": [
                        {
                          "@Num": "1",
                          "Sentence": "検定料"
                        },
                        {
                          "@Num": "2",
                          "Sentence": "一六、五〇〇円"
                        }
                      ]
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "国立高等専門学校の専攻科において、当該学校の定めるところにより、当該専攻科の修業年限を超えて一定の期間にわたり計画的に教育課程を履修して課程を修了することを認められた学生の授業料の年額は、前項の規定にかかわらず、当該学生が課程を修了するまでに納付する授業料の総額と当該学生以外の学生の授業料の年額に当該専攻科の修業年限に相当する年数を乗じて得た額との均衡等を考慮して、機構が定める。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（授業料の徴収方法等）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "各年度に係る授業料の徴収は、当該年度において、学期その他の期間に区分して行うことを原則とする。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "ただし、学生の申出があったときは、一括して徴収することができる。"
                    }
                  ]
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の規定にかかわらず、入学年度に係る授業料について、入学を許可される者の申出があったときは、入学年度の前年度において入学を許可するときにその一部又は全部を徴収することができる。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "当該年度における在学期間が十二月に満たない者の授業料は、授業料の年額の十二分の一に相当する額に在学する月数（一月未満の端数があるときは、これを一月とする。）を乗じて得た額を徴収することを原則とする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "商船に関する学科の在学期間が六月の最終の学年については、前項中「十二月」とあるのは「六月」と、「十二分の一」とあるのは「六分の一」とする。"
                }
              }
            ]
          },
          {
            "@Num": "5",
            "ArticleCaption": "（入学料の徴収方法）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "入学料は、入学を許可するときに徴収することを原則とする。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（検定料の徴収方法）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "検定料は、入学、転学、編入学又は再入学の出願を受理するときに徴収することを原則とする。"
              }
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（寄宿料の標準額等）",
            "ArticleTitle": "第七条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "寄宿舎の寄宿料の月額は、居室一室当たりの収容定員が一人であるものにあっては八百円を、その他のものにあっては七百円をそれぞれ標準として、機構が定める。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "寄宿料は、寄宿舎に入舎した日の属する月から退舎する日の属する月まで毎月その月分を徴収することを原則とする。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "前項の規定にかかわらず、学生の申出又は承諾があったときは、その申出又は承諾があった月分の寄宿料を併せて徴収することができる。"
                }
              }
            ]
          },
          {
            "@Num": "8",
            "ArticleCaption": "（授業料等の上限額等）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "機構は、国立高等専門学校の授業料の年額、入学料、入学等に係る検定料又は寄宿料の月額を定めようとする場合において、特別の事情があるときは、第二条第一項又は前条第一項の規定にかかわらず、これらに規定する額にそれぞれ百分の百十を乗じて得た額を超えない範囲内において、これらを定めることができる。"
              }
            }
          },
          {
            "@Num": "9",
            "ArticleCaption": "（経済的負担の軽減のための措置）",
            "ArticleTitle": "第九条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "機構は、経済的理由によって納付が困難であると認められる者その他のやむを得ない事情があると認められる者に対し、授業料、入学料又は寄宿料の全部若しくは一部の免除又は徴収の猶予その他の経済的負担の軽減を図るために必要な措置を講ずるものとする。"
              }
            }
          },
          {
            "@Num": "10",
            "ArticleCaption": "（雑則）",
            "ArticleTitle": "第十条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "国立高等専門学校に在学する者のうち学生以外の者に係る費用及びこの省令に規定する費用以外の費用に関しては、機構が定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Article": [
            {
              "@Num": "1",
              "ArticleCaption": "（施行期日）",
              "ArticleTitle": "第一条",
              "Paragraph": {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "この省令は、公布の日から施行する。"
                }
              }
            },
            {
              "@Num": "2",
              "ArticleCaption": "（経過措置）",
              "ArticleTitle": "第二条",
              "Paragraph": {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "平成十一年三月三十一日に国立大学法人法等の施行に伴う関係法律の整備等に関する法律（平成十五年法律第百十七号）第二条の規定による廃止前の国立学校設置法（昭和二十四年法律第百五十号）第七条の十三の表に掲げる高等専門学校に在学する者及びその者が属することとなる年次に平成十一年四月一日以後に転学、編入学又は再入学をした者であって、当該学校を卒業するため必要である教育課程の履修を、独立行政法人国立高等専門学校機構法別表の上欄に掲げる国立高等専門学校において行うこととなる者の授業料の額は、第二条第一項及び第八条の規定にかかわらず、なお従前の例による。"
                }
              }
            }
          ]
        },
        {
          "@AmendLawNum": "平成一七年三月三一日文部科学省令第一五号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行し、平成十七年度に係る授業料から適用する。"
            }
          }
        }
      ]
    }
  }
}
