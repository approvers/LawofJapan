                        "@Num": "2",
                        "ItemTitle": "二",
                        "ItemSentence": {
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "国家公安委員会委員長以外の国務大臣のうちから、内閣総理大臣が指定する者"
                          }
