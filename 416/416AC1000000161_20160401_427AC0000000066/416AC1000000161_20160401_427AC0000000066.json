                    "@Num": "3",
                    "ParagraphNum": "３",
                    "ParagraphSentence": {
                      "Sentence": {
                        "@WritingMode": "vertical",
                        "#text": "会長に事故があるときは、あらかじめその指名する委員がその職務を代理する。"
                      }
                    }
                  }
                ]
              },
