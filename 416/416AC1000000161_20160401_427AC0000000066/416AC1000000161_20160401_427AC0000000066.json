                    "ParagraphSentence": {
                      "Sentence": {
                        "@WritingMode": "vertical",
                        "#text": "会長は、内閣総理大臣をもって充てる。"
                      }
                    }
                  },
                  {
                    "@Hide": "false",
                    "@Num": "2",
                    "ParagraphNum": "２",
                    "ParagraphSentence": {
                      "Sentence": {
                        "@WritingMode": "vertical",
                        "#text": "会長は、会務を総理する。"
