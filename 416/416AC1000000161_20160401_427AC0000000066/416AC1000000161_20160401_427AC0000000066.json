                    "@Hide": "false",
                    "@Num": "2",
                    "ParagraphNum": "２",
                    "ParagraphSentence": {
                      "Sentence": {
                        "@WritingMode": "vertical",
                        "#text": "前条第一項第三号の委員は、再任されることができる。"
                      }
                    }
                  }
                ]
              },
              {
                "@Delete": "false",
                "@Hide": "false",
