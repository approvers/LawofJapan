            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この省令は、平成二十二年十月一日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成二十三年三月三十一日総務省・厚生労働省・経済産業省・国土交通省・環境省・防衛省令第一号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Hide": "false",
