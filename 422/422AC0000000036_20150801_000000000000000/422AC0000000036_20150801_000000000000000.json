                        "@Num": "4",
                        "ItemTitle": "四",
                        "ItemSentence": {
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "その他当該都道府県の区域内の公共建築物における木材の利用の促進に関し必要な事項"
                          }
                        }
                      }
