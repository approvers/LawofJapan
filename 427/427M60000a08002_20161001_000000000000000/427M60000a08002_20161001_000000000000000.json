{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "002",
    "@Year": "27",
    "LawNum": "平成二十七年総務省・農林水産省・国土交通省令第二号",
    "LawBody": {
      "LawTitle": "半島振興法施行規則",
      "EnactStatement": "半島振興法（昭和六十年法律第六十三号）第九条の二第一項及び第三項第二号並びに第九条の四第一項の規定に基づき、並びに同法を実施するため、半島振興法施行規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（産業振興促進計画の認定の申請）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "半島振興法（以下「法」という。）第九条の二第一項の規定により認定の申請をしようとする半島地域市町村は、申請書に産業振興促進計画を記載した書類及び次に掲げる図書を添えて、これらを主務大臣に提出しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "計画区域に含まれる行政区画を表示した図面又は縮尺、方位、目標となる地物及び計画区域を表示した付近見取図"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "産業振興促進計画の工程表及びその内容を説明した文書"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "法第九条の二第五項に規定する事項を記載する場合には、補助金等交付財産の名称、現行の用途、補助金等交付財産に充てられた補助金等及び当該補助金等交付財産を所管する府省の名称、補助金等交付財産の処分の方法及び実施主体並びに補助金等交付財産の処分後の用途に関する事項を記載した書類"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "法第九条の二第六項に規定する同意を得たことを証する書面"
                    }
                  },
                  {
                    "@Num": "5",
                    "ItemTitle": "五",
                    "ItemSentence": {
                      "Sentence": "前各号に掲げるもののほか、主務大臣が必要と認める事項を記載した書類"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "産業振興促進計画に法第九条の二第五項に規定する事項を記載している場合には、前項各号に掲げるもののほか、補助金等交付財産の所在を表示した図面を添付するよう努めるものとする。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（産業振興促進計画の記載事項）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条の二第三項第二号の主務省令で定める事項は、次に掲げるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "産業振興促進計画の名称"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "産業振興促進計画の目標の達成状況に係る評価に関する事項"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "計画区域における産業の振興を促進する上での課題"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "関係都道府県、関係市町村、関係団体、民間事業者その他の者との適切な役割分担及び連携に関する事項"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げるもののほか、計画区域における産業の振興を促進するために必要な事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（産業振興促進計画の変更の認定の申請）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条の四第一項の規定により産業振興促進計画の変更の認定を受けようとする半島地域市町村は、申請書にその変更内容を明らかにした書類及び第一条第一項各号に掲げる図書のうち当該産業振興促進計画の変更に伴いその内容が変更されるものを添えて、これらを主務大臣に提出しなければならない。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（法第九条の四第一項の主務省令で定める軽微な変更）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条の四第一項の主務省令で定める軽微な変更は、次に掲げるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "地域の名称の変更又は地番の変更に伴う変更"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "計画期間の六月以内の変更"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "前二号に掲げるもののほか、産業振興促進計画の実施に支障がないと主務大臣が認める変更"
                  }
                }
              ]
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この省令は、平成二十七年四月一日から施行する。"
          }
        }
      }
    }
  }
}
