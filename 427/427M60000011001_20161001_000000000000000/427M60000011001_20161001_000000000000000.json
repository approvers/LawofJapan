{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "001",
    "@Year": "27",
    "LawNum": "平成二十七年内閣官房・法務省令第一号",
    "LawBody": {
      "LawTitle": "矯正医官の兼業の特例等に関する法律第四条第一項の規定による矯正医官の兼業等に関する規則",
      "EnactStatement": "矯正医官の兼業及び勤務時間の特例等に関する法律（平成二十七年法律第六十二号）第四条第一項の規定に基づき、矯正医官の兼業及び勤務時間の特例等に関する法律第四条第一項の規定による矯正医官の兼業等に関する規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（法第四条第一項に規定する内閣官房令・法務省令で定める施設）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "矯正医官の兼業の特例等に関する法律（以下「法」という。）第四条第一項に規定する内閣官房令・法務省令で定める施設は、次に掲げる施設とする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "労働安全衛生法（昭和四十七年法律第五十七号）第十三条第一項に規定する産業医を選任すべき事業場"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "介護保険法（平成九年法律第百二十三号）第八条第二十八項に規定する介護老人保健施設"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "警察及び海上保安庁が取り扱う死体について、調査、検査、解剖その他死因又は身元を明らかにするための措置を行う施設"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "監察医として死体の検案又は解剖を行う施設"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "精神保健指定医として職務を行う施設"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "その他法務大臣が内閣総理大臣と協議して定める施設"
                  }
                }
              ]
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（部外診療の承認）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法務大臣は、法第四条第一項の規定により部外診療の承認の申請を受けたときは、次に掲げる要件の全てに該当すると認める場合に限り、当該部外診療を行うことを承認することができる。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "刑事収容施設及び被収容者等の処遇に関する法律（平成十七年法律第五十号）第五十六条、少年院法（平成二十六年法律第五十八号）第四十八条、少年鑑別所法（平成二十六年法律第五十九号）第三十条又は婦人補導院法（昭和三十三年法律第十七号）第二条第一項に定める措置等に必要な能力の維持向上に資するものであること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "兼業による著しい疲労その他の身体上又は精神上の理由により、職務の能率的な遂行に悪影響を及ぼすおそれがないこと。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "兼業することが、国家公務員としての信用を傷つけ、又は官職全体の不名誉となるおそれがないこと。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "正規の勤務時間において、勤務しないこととなる場合においては、公務の運営に支障がないこと。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（部外診療の承認の申請）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "部外診療の承認の申請は、次に掲げる事項を記載した書面によらなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "矯正医官の氏名、現住所及びその占める官職並びにその属する職務の級"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "矯正医官の正規の勤務時間"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "部外診療先及びその職名"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "部外診療先における勤務時間、勤務の内容及び部外診療の予定期間"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "矯正医官がその正規の勤務時間において、勤務しないこととなる必要の有無及びその内容"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "矯正医官が報酬を得て、部外診療を行う場合には、その金額"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "部外診療を必要とする理由"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "その他参考となる事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（承認台帳の整備）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法務大臣は、矯正医官の部外診療の承認に関する台帳を備え、これに次に掲げる事項を記載するものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "部外診療を承認した年月日"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "矯正医官の氏名及びその占める官職並びにその属する職務の級"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "部外診療先及びその職名"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "部外診療の予定期間"
                  }
                }
              ]
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この命令は、法の施行の日（平成二十七年十二月一日）から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成二八年三月二二日内閣官房・法務省令第一号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この命令は、一般職の職員の給与に関する法律等の一部を改正する法律附則第一条第一項ただし書に規定する規定の施行の日（平成二十八年四月一日）から施行する。"
            }
          }
        }
      ]
    }
  }
}
