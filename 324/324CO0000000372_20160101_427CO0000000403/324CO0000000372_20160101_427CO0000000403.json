        },
        {
          "@AmendLawNum": "昭和二八年四月一六日政令第七四号",
          "@Extract": "false",
          "@Type": "Amend",
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Hide": "false",
