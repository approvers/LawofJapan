    "LawBody": {
      "LawTitle": "ハンセン病療養所入所者等に対する補償金の支給等に関する法律",
      "Preamble": {
        "Paragraph": [
          {
            "@Hide": "false",
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
