{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "2",
    "@Year": "13",
    "LawNum": "平成十三年経済産業省令第二号",
    "LawBody": {
      "LawTitle": "日本工業標準調査会規則",
      "EnactStatement": "中央省庁等改革関係法施行法（平成十一年法律第百六十号）の施行に伴い、及び工業標準化法（昭和二十四年法律第百八十五号）第十条の規定に基づき、日本工業標準調査会規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（委員の任期等）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "補欠の委員の任期は、前任者の残任期間とする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "委員は、再任されることができる。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "委員、臨時委員及び専門委員は、非常勤とする。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（会長）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "会長は、日本工業標準調査会（以下「調査会」という。）を代表する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "会長に事故があるときは、あらかじめその指名する委員が、その職務を代理する。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（部会）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "調査会は、その定めるところにより、部会を置くことができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "部会に属すべき委員、臨時委員及び専門委員は、会長が指名する。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "部会に部会長を置き、当該部会に属する委員の互選により選任する。"
                }
              },
              {
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": "部会長は、当該部会の事務を掌理する。"
                }
              },
              {
                "@Num": "5",
                "ParagraphNum": "５",
                "ParagraphSentence": {
                  "Sentence": "部会長に事故があるときは、当該部会に属する委員又は臨時委員のうちから部会長があらかじめ指名する者が、その職務を代理する。"
                }
              },
              {
                "@Num": "6",
                "ParagraphNum": "６",
                "ParagraphSentence": {
                  "Sentence": "調査会は、その定めるところにより、部会の議決をもって調査会の議決とすることができる。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（議事）",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "調査会は、委員及び議事に関係のある臨時委員の過半数が出席しなければ、会議を開き、議決することができない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "調査会の議事は、委員及び議事に関係のある臨時委員で会議に出席したものの過半数で決し、可否同数のときは、会長の決するところによる。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "前二項の規定は、部会の議事に準用する。"
                }
              }
            ]
          },
          {
            "@Num": "5",
            "ArticleCaption": "（庶務）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調査会の庶務は、経済産業省産業技術環境局基準認証政策課において処理する。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（雑則）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令に定めるもののほか、議事の手続その他調査会の運営に関し必要な事項は、会長が調査会に諮って定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": [
          {
            "@Num": "1",
            "ParagraphCaption": "（施行期日）",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この中央省庁等改革推進本部令（次項において「本部令」という。）は、内閣法の一部を改正する法律（平成十一年法律第八十八号）の施行の日（平成十三年一月六日）から施行する。"
            }
          },
          {
            "@Num": "2",
            "ParagraphCaption": "（この本部令の効力）",
            "ParagraphNum": "２",
            "ParagraphSentence": {
              "Sentence": "この本部令は、その施行の日に、日本工業標準調査会規則（平成十三年経済産業省令第二号）となるものとする。"
            }
          }
        ]
      }
    }
  }
}
