                "Paragraph": {
                  "@Hide": "false",
                  "@Num": "1",
                  "ParagraphNum": null,
                  "ParagraphSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "国は、水循環に関する施策を適正に策定し、及び実施するため、水循環に関する調査の実施及び調査に必要な体制の整備その他の必要な措置を講ずるものとする。"
                    }
                  }
                }
              },
