            "ParagraphSentence": {
              "Sentence": "この省令は、法の施行の日（平成二十六年五月一日）から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成二八年一月二八日農林水産省令第四号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、平成二十八年四月一日から施行する。"
              }
            }
          }
        }
      ]
    }
  }
}
