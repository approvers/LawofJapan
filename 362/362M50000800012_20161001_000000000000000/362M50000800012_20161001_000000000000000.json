{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "12",
    "@Year": "62",
    "LawNum": "昭和六十二年運輸省令第十二号",
    "LawBody": {
      "LawTitle": "鉄道事業等監査規則",
      "EnactStatement": "鉄道事業法（昭和六十一年法律第九十二号）第六十六条の規定に基づき、鉄道事業等監査規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（趣旨）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "鉄道事業法第五十六条第一項から第三項までの規定による監査（以下「監査」という。）については、この省令の定めるところによる。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（監査の目的）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "監査は、輸送の安全を確保するための取組が適切であるかどうか、施設及び車両の管理及び保守並びに運転取扱いが適切であるかどうか、運輸が適正に行われているかどうか、会計の整理及び財産の管理が適確に行われているかどうかについて監査することにより、輸送の安全を確保し、利用者の利益を保護するとともに鉄道事業等の健全な発達を図ることを目的とする。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（監査の種類）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "監査の種類は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "保安監査（輸送の安全を確保するための取組、施設及び車両並びに運転取扱いの状況について行う監査）"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "業務監査（鉄道事業及び索道事業の運輸の状況について行う監査）"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "会計監査（鉄道事業及び索道事業の会計の整理及び財産の管理の状況について行う監査）"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（保安監査）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "保安監査は、次に掲げる事項について行うものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "輸送の安全の確保に関する取組の状況"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "施設、車両及び運転取扱いに関する法令の遵守状況並びにこれらの法令に基づく許可、認可、確認及び届出に係る事項の実施状況"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "法令の規定により定められた施設及び車両の整備並びに運転取扱いに関する細則の遵守状況"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "運転保安上又は公益上不適当な施設等の有無"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "施設の工事の実施状況"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "事故及び災害の処理状況並びに事故及び災害の防止対策の実施状況"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "施設及び車両に関する補修計画及び補修実績"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "保安に関する業務に従事する係員の職制及び配置の状況"
                  }
                },
                {
                  "@Num": "9",
                  "ItemTitle": "九",
                  "ItemSentence": {
                    "Sentence": "保安に関する業務に従事する係員の資格及び教育訓練の状況並びにその技能の程度"
                  }
                },
                {
                  "@Num": "10",
                  "ItemTitle": "十",
                  "ItemSentence": {
                    "Sentence": "鉄道台帳及び図面の整理状況"
                  }
                },
                {
                  "@Num": "11",
                  "ItemTitle": "十一",
                  "ItemSentence": {
                    "Sentence": "保安監査に基づく指示等に係る事項の実施状況"
                  }
                },
                {
                  "@Num": "12",
                  "ItemTitle": "十二",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げるもののほか、第二条の目的を達成するために必要と認める事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（業務監査）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "業務監査は、次に掲げる事項について行うものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "運輸に関する法令の遵守状況並びにこれらの法令に基づく許可、認可及び届出に係る事項の実施状況"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "運賃及び料金の実施状況"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "旅客運賃表、旅客列車時刻表その他運輸上必要な諸表等の備付状況"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "運送約款の内容"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "乗車券の記載事項"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "運輸に関する業務に従事する係員の服務の状況"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "運輸に関する業務に従事する係員の職制及び配置の状況"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "業務監査に基づく指示等に係る事項の実施状況"
                  }
                },
                {
                  "@Num": "9",
                  "ItemTitle": "九",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げるもののほか、第二条の目的を達成するために必要と認める事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（会計監査）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "会計監査は、次に掲げる事項について行うものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "会計及び財産に関する法令の遵守状況並びにこれらの法令に基づく許可、認可及び届出に係る事項の実施状況"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "事業計画及び資金計画並びにこれらの実施状況"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "会計制度及び会計整理の状況"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "資産、負債及び資本並びに収益及び配当の状況"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "会計監査に基づく指示等に係る事項の実施状況"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げるもののほか、第二条の目的を達成するために必要と認める事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（監査の実施）",
            "ArticleTitle": "第七条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "地方運輸局長は、監査計画に基づいて監査を行う。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "ただし、地方運輸局長が特に必要と認める場合には、監査計画に基づかないで監査を行うことができる。"
                    }
                  ]
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "国土交通大臣は、第二条の目的を達成するために、特に必要があると認める場合に監査を行うものとする。"
                }
              }
            ]
          },
          {
            "@Num": "8",
            "ArticleCaption": "（監査計画）",
            "ArticleTitle": "第八条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "地方運輸局長は、年度ごとの監査計画を定め、当該監査計画に係る年度の前年度の二月末日までに国土交通大臣に提出するものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の監査計画は、監査を定期的かつ効果的に実施することができるように、監査の対象となる鉄道又は索道、監査の時期その他監査の実施の概要について定めるものとする。"
                }
              }
            ]
          },
          {
            "@Num": "9",
            "ArticleCaption": "（監査員）",
            "ArticleTitle": "第九条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "監査は、国土交通大臣又は地方運輸局長が指名した職員（以下「監査員」という。）がこれを行う。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "国土交通大臣又は地方運輸局長は、前項の監査員の中から主任監査員を指名しなければならない。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "主任監査員は、監査員の行う事務を統括する。"
                }
              },
              {
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": "主任監査員は、監査を終了したときは、遅滞なく、意見を付して当該監査の結果を国土交通大臣又は地方運輸局長に報告するものとする。"
                }
              }
            ]
          },
          {
            "@Num": "10",
            "ArticleCaption": "（監査報告）",
            "ArticleTitle": "第十条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "地方運輸局長は、前条第四項の規定による報告を受けたときは、遅滞なく、当該監査結果の概要（重要又は異例に属する事項に限る。）を国土交通大臣に報告するものとする。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Num": "1",
              "ParagraphNum": "１",
              "ParagraphSentence": {
                "Sentence": "この省令は、昭和六十二年四月一日から施行する。"
              }
            },
            {
              "@Num": "2",
              "ParagraphNum": "２",
              "ParagraphSentence": {
                "Sentence": "地方鉄道等監査規則（昭和三十一年運輸省令第三十四号）は、廃止する。"
              }
            },
            {
              "@Num": "3",
              "ParagraphNum": "３",
              "ParagraphSentence": {
                "Sentence": "昭和六十二年度の監査計画は、第八条第一項の規定にかかわらず、昭和六十二年六月三十日までに運輸大臣に提出するものとする。"
              }
            }
          ]
        },
        {
          "@AmendLawNum": "平成一二年一一月二九日運輸省令第三九号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、平成十三年一月六日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成一八年七月一四日国土交通省令第七八号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、運輸の安全性の向上のための鉄道事業法等の一部を改正する法律の施行の日から施行する。"
              }
            }
          }
        }
      ]
    }
  }
}
