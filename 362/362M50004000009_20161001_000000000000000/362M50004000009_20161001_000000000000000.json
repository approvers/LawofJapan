{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "9",
    "@Year": "62",
    "LawNum": "昭和六十二年建設省令第九号",
    "LawBody": {
      "LawTitle": "鉄道線路の道路への敷設の許可手続に関する省令",
      "EnactStatement": "鉄道線路の道路への敷設の許可手続を定める政令（昭和六十二年政令第七十八号）第一条第一項及び第三条の規定に基づき、鉄道線路の道路への敷設の許可手続に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（許可の申請手続）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "鉄道線路の道路への敷設の許可手続を定める政令（以下「令」という。）第一条の鉄道線路の道路への敷設の許可の申請書には、次に掲げる事項を記載しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "氏名又は名称及び住所"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "鉄道線路の道路への敷設がやむを得ない理由"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "鉄道線路が敷設される道路の区間並びに当該道路の種類及び路線名"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "道路に敷設される鉄道線路に係る鉄道の種類"
                    }
                  },
                  {
                    "@Num": "5",
                    "ItemTitle": "五",
                    "ItemSentence": {
                      "Sentence": "道路に敷設される鉄道線路に係る施設の概要で次に掲げる事項"
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Sentence": "構造物の形態"
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Sentence": "単線、複線等の別"
                        }
                      },
                      {
                        "@Num": "3",
                        "Subitem1Title": "ハ",
                        "Subitem1Sentence": {
                          "Sentence": "動力（電気を動力とする鉄道にあつては、交流又は直流の別及び電車線の標準電圧）"
                        }
                      },
                      {
                        "@Num": "4",
                        "Subitem1Title": "ニ",
                        "Subitem1Sentence": {
                          "Sentence": "普通鉄道にあつては、軌間"
                        }
                      },
                      {
                        "@Num": "5",
                        "Subitem1Title": "ホ",
                        "Subitem1Sentence": {
                          "Sentence": "設計最高速度及び設計通過トン数"
                        }
                      },
                      {
                        "@Num": "6",
                        "Subitem1Title": "ヘ",
                        "Subitem1Sentence": {
                          "Sentence": "駅を設置する場合には、その位置及び名称"
                        }
                      }
                    ]
                  },
                  {
                    "@Num": "6",
                    "ItemTitle": "六",
                    "ItemSentence": {
                      "Sentence": "鉄道線路が道路に敷設される区間において経営する鉄道事業の種別"
                    }
                  },
                  {
                    "@Num": "7",
                    "ItemTitle": "七",
                    "ItemSentence": {
                      "Sentence": "第三種鉄道事業を経営する場合には、鉄道線路を譲渡するか又は使用させるかの別並びにその相手方の氏名又は名称及び住所"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "令第一条に規定する国土交通省令で定める書類及び図面は、次に掲げるものとする。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "次に掲げる事項（第三種鉄道事業を経営する場合には、ロ及びハに掲げる事項を除く。）を記載した書類"
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Sentence": "路線の起点及び終点並びに主要な経過地"
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Sentence": "鉄道線路が道路に敷設される区間における業務の範囲"
                        }
                      },
                      {
                        "@Num": "3",
                        "Subitem1Title": "ハ",
                        "Subitem1Sentence": {
                          "Sentence": "一日当たりの計画供給輸送力"
                        }
                      },
                      {
                        "@Num": "4",
                        "Subitem1Title": "ニ",
                        "Subitem1Sentence": {
                          "Sentence": "期間を限定して鉄道事業の許可を受けている場合には、その期間"
                        }
                      },
                      {
                        "@Num": "5",
                        "Subitem1Title": "ホ",
                        "Subitem1Sentence": {
                          "Sentence": "事業の開始に要する資金の総額及びその調達方法"
                        }
                      },
                      {
                        "@Num": "6",
                        "Subitem1Title": "ヘ",
                        "Subitem1Sentence": {
                          "Sentence": "鉄道線路の道路への敷設に係る建設費"
                        }
                      }
                    ]
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "第三種鉄道事業を経営する場合には、鉄道線路を譲渡し、又は使用させる相手方に係る前号ロからホまでに掲げる事項を記載した書類"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "道路に敷設される鉄道線路に係る線路予測図"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "線路予測平面図"
                    }
                  }
                ]
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "前項第三号の線路予測図は次の二種とする。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Column": [
                        {
                          "@Num": "1",
                          "Sentence": "平面図"
                        },
                        {
                          "@Num": "2",
                          "Sentence": "縮尺は、五千分の一以上とし、次に掲げる事項を記載しなければならない。"
                        }
                      ]
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Sentence": "鉄道線路が敷設される道路の区間並びに当該道路の種類及び路線名"
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Sentence": "駅を設置する場合には、その位置及び名称"
                        }
                      },
                      {
                        "@Num": "3",
                        "Subitem1Title": "ハ",
                        "Subitem1Sentence": {
                          "Sentence": "鉄道線路の中心線及びその二百メートルごとの逓加距離"
                        }
                      },
                      {
                        "@Num": "4",
                        "Subitem1Title": "ニ",
                        "Subitem1Sentence": {
                          "Sentence": "地形及び主要な地物"
                        }
                      },
                      {
                        "@Num": "5",
                        "Subitem1Title": "ホ",
                        "Subitem1Sentence": {
                          "Sentence": "付近の道路、鉄道及び軌道（計画中のものを含む。）並びにこれらの路線名又は線名"
                        }
                      },
                      {
                        "@Num": "6",
                        "Subitem1Title": "ヘ",
                        "Subitem1Sentence": {
                          "Sentence": "縮尺及び方位"
                        }
                      }
                    ]
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Column": [
                        {
                          "@Num": "1",
                          "Sentence": "縦断面図"
                        },
                        {
                          "@Num": "2",
                          "Sentence": "縮尺は、横を五千分の一以上、縦を五百分の一以上とし、次に掲げる事項を記載しなければならない。"
                        }
                      ]
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Sentence": "鉄道線路の中心線に係る地面及び施工基面の二百メートルごとの地点の高さ"
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Sentence": "鉄道線路の中心線のこう配"
                        }
                      },
                      {
                        "@Num": "3",
                        "Subitem1Title": "ハ",
                        "Subitem1Sentence": {
                          "Sentence": "駅を設置する場合には、その位置及び名称"
                        }
                      },
                      {
                        "@Num": "4",
                        "Subitem1Title": "ニ",
                        "Subitem1Sentence": {
                          "Sentence": "主要なトンネル及び橋りようの位置及び長さ"
                        }
                      },
                      {
                        "@Num": "5",
                        "Subitem1Title": "ホ",
                        "Subitem1Sentence": {
                          "Sentence": "縮尺"
                        }
                      }
                    ]
                  }
                ]
              },
              {
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": "第二項第四号の線路予測平面図は、縮尺を二万五千分の一以上とし、前項第一号ニからヘまでに掲げる事項を記載しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（申請の時期）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "鉄道事業法（昭和六十一年法律第九十二号。以下「法」という。）第六十一条第一項ただし書の許可の申請は、道路に鉄道線路を敷設する必要があると認めたときは、速やかに行うものとする。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（提出すべき申請書等の部数）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第六十一条第一項ただし書の規定による許可を受けようとする者が令第一条第一項の規定により提出すべき申請書並びに添付すべき書類及び図面の部数は、正本一通並びに関係都道府県知事及び関係道路管理者の数と同一の部数のその写しとする。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（道路管理者の意見の聴取）",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "都道府県知事は、令第二条の規定により道路管理者の意見を聴こうとするときは、道路管理者が意見を提出すべき期限を指定することができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "都道府県知事は、前項の規定により指定した期限までに道路管理者の意見が提出されないときは、当該鉄道線路の道路への敷設について支障がない旨の道路管理者の意見の提出を受けたものとみなすことができる。"
                }
              }
            ]
          },
          {
            "@Num": "5",
            "ArticleCaption": "（処分の通知）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "国土交通大臣は、法第六十一条第一項ただし書の規定による許可の申請について処分したときは、遅滞なく、これを当該申請を経由した都道府県知事及び関係道路管理者に通知しなければならない。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Num": "1",
              "ParagraphCaption": "（施行期日）",
              "ParagraphNum": "１",
              "ParagraphSentence": {
                "Sentence": "この省令は、公布の日から施行する。"
              }
            },
            {
              "@Num": "2",
              "ParagraphCaption": "（地方鉄道法第四条ただし書による線路敷設の許可手続の廃止）",
              "ParagraphNum": "２",
              "ParagraphSentence": {
                "Sentence": "地方鉄道法第四条ただし書による線路敷設の許可手続（明治四十三年内務省令第二十七号）は、廃止する。"
              }
            }
          ]
        },
        {
          "@AmendLawNum": "平成一二年三月一日建設省令第一四号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年一一月二〇日建設省令第四一号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphCaption": "（施行期日）",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この省令は、内閣法の一部を改正する法律（平成十一年法律第八十八号）の施行の日（平成十三年一月六日）から施行する。"
            }
          }
        }
      ]
    }
  }
}
