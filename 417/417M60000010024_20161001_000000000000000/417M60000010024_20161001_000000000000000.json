{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "024",
    "@Year": "17",
    "LawNum": "平成十七年法務省令第二十四号",
    "LawBody": {
      "LawTitle": "鉱業抵当登記規則",
      "EnactStatement": "不動産登記法（平成十六年法律第百二十三号）及び不動産登記法の施行に伴う関係法律の整備等に関する法律（平成十六年法律第百二十四号）の施行に伴い、並びに鉱業抵当法（明治三十八年法律第五十五号）の規定を実施するため、鉱業抵当登記取扱手続（明治三十八年司法省令第十九号）の全部を改正する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（工場抵当登記規則の準用）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "鉱業抵当法による鉱業財団の登記については、この省令に別段の定めがあるもののほか、工場抵当登記規則（平成十七年法務省令第二十三号）中工場財団に関する規定を準用する。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（表題部の登記事項）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "鉱業財団の登記記録の表題部の登記事項は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "鉱区の位置"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "鉱物の名称"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "鉱区の面積"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "鉱業権の登録番号"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "鉱業事務所の所在地"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（鉱業権の記録）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "鉱業財団目録に鉱業権を記録するときは、次に掲げる事項を記録するものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "鉱区の位置"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "鉱物の名称"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "鉱区の面積"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "鉱業権設定の年月日"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "鉱業権の登録番号"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "採掘権につき期限があるときは、その期限"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（土地の使用権の記録）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "鉱業財団目録に土地の使用権を記録するときは、次に掲げる事項を記録するものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "土地の所在する市、区、郡、町、村及び字並びに当該土地の地番"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "使用の目的"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "使用の時期及び期間"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "使用料及びその支払時期"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（所有権の保存の登記の添付情報）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "鉱業財団について所有権の保存の登記の申請をする場合には、工作物の配置を記録した図面をその申請情報と併せて登記所に提供しなければならない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の図面は、鉱区ごとに作成しなければならない。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "不動産登記規則（平成十七年法務省令第十八号）第七十三条及び第七十四条第二項の規定は、第一項の図面について準用する。"
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（保存期間）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "鉱業財団目録及び前条第一項の図面は、鉱業財団の登記記録を閉鎖した日から二十年間保存しなければならない。"
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、不動産登記法の施行の日（平成十七年三月七日）から施行する。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（未指定事務に係る旧登記簿）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "不動産登記法附則第三条第一項による指定（同条第三項の規定により指定を受けたものとみなされるものを含む。以下「第三条指定」という。）がされるまでの間における第三条指定を受けていない事務についての新令（この省令による改正後の鉱業抵当登記規則をいう。）の適用については、新令第二条中「登記記録」とあるのは「登記簿」と、同令第六条中「登記記録」とあるのは「登記用紙」とする。"
              }
            }
          }
        ]
      }
    }
  }
}
