{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "38",
    "@Year": "06",
    "LawNum": "平成六年運輸省令第三十八号",
    "LawBody": {
      "LawTitle": "国際会議等の誘致の促進及び開催の円滑化等による国際観光の振興に関する法律施行規則",
      "EnactStatement": "国際会議等の誘致の促進及び開催の円滑化等による国際観光の振興に関する法律（平成六年法律第七十九号）第四条第二項第一号及び第二号、第五条第一項第一号から第三号まで、第六条第二項並びに第九条第一項の規定に基づき、国際会議等の誘致の促進及び開催の円滑化等による国際観光の振興に関する法律施行規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（国際会議等）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "国際会議等の誘致の促進及び開催の円滑化等による国際観光の振興に関する法律（以下「法」という。）第二条に規定する国際会議等は、国際観光の振興を図るため、誘致の促進及び開催の円滑化等の措置が特に必要なものとして、海外の複数の参加国からおおむね十人以上の外国人の参加が見込まれ、かつ、外国人の観光の魅力の増進及び外国人と国民との間の交流の促進に資するものとする。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（国際会議等の用に供する会議場施設等）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第四条第二項第一号の国土交通省令で定める施設は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "国際会議場施設"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "ホテルにある会議場施設"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "大学にある会議場施設"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "公会堂にある会議場施設"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げるもののほか、会議、討論会、講習会その他これらに類する集会（以下「会議等」という。）の用に供することができるものとして整備された施設"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（国際会議等に参加する者の利用に供する施設）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第四条第二項第二号の国土交通省令で定める施設は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "宿泊施設"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "食事施設"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "案内施設"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（国際会議等の用に供する会議場施設等の基準）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第五条第一項第一号の国土交通省令で定める基準は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "二百人以上を収容することができ、かつ、同時通訳設備を用いた会議等の開催が可能な会議室又はこれに類する施設（以下「会議室等」という。）を有していること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "前号に掲げる施設以外に、同時通訳設備を用いた会議等の開催が可能な中小規模の会議室等を有していること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "会議等に参加する者の用に供するロビー又はこれに類する施設を有していること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "会議等に参加する者の用に供する事務室、応接室、控室又はこれらに類する施設を有していること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "会議等に参加する者の需要を満たすことができる適当な規模の駐車場が確保されていること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（国際会議等に参加する者の利用に供する施設の基準）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第五条第一項第二号の国土交通省令で定める基準は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "宿泊施設は、次に掲げる要件を備えていること。"
                  },
                  "Subitem1": [
                    {
                      "@Num": "1",
                      "Subitem1Title": "イ",
                      "Subitem1Sentence": {
                        "Sentence": "その収容人員の合計が、前条第一号に規定する会議室等の収容人員（同号に規定する会議室等が二以上ある場合には、これらの会議室等の収容人員の合計）以上であること。"
                      }
                    },
                    {
                      "@Num": "2",
                      "Subitem1Title": "ロ",
                      "Subitem1Sentence": {
                        "Sentence": "その客室のうち広さ及び設備が外国人観光旅客の宿泊に適するものの数が、客室総数の三分の一以上であること。"
                      }
                    },
                    {
                      "@Num": "3",
                      "Subitem1Title": "ハ",
                      "Subitem1Sentence": {
                        "Sentence": "国際会議等に参加する者の需要を満たすことができる適当な規模の駐車場が確保されていること。"
                      }
                    }
                  ]
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "食事施設は、次に掲げる要件を備えていること。"
                  },
                  "Subitem1": [
                    {
                      "@Num": "1",
                      "Subitem1Title": "イ",
                      "Subitem1Sentence": {
                        "Sentence": "その数及び規模が国際会議等に参加する者の需要を満たすことができる適当なものであること。"
                      }
                    },
                    {
                      "@Num": "2",
                      "Subitem1Title": "ロ",
                      "Subitem1Sentence": {
                        "Sentence": "その施設及び提供するサービスが外国人観光旅客の利用に適するものであること。"
                      }
                    }
                  ]
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "案内施設は、その施設及び提供するサービスが外国人観光旅客の利用に適するものであること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（国際会議等の誘致及びその開催の円滑化に関する業務）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第五条第一項第三号の国土交通省令で定める業務は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "国際会議等の誘致に関する情報の収集を行うこと。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "誘致すべき国際会議等の関係者に対する宣伝その他の誘致のための活動を行うこと。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "国際会議等を主催する者に対する援助を行うこと。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（認定事項の変更）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第六条第二項の国土交通省令で定める変更は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "第二条に規定する施設が第四条の基準に適合しなくなり、かつ、一年以上にわたって回復する見込みがない変更"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "第三条に規定する施設が第五条の基準に適合しなくなり、かつ、一年以上にわたって回復する見込みがない変更"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "法第四条第二項第三号に規定する業務を実施する体制が一年以上にわたって当該業務を適確に遂行できなくなる変更"
                  }
                }
              ]
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（開催の円滑化を図るべき国際会議等）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条第一項の国土交通省令で定める国際会議等は、次の各号のいずれにも該当するものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "おおむね五十人以上の外国人が参加するものであること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "開催に要する経費がおおむね五百万円以上であること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "実施計画及び資金計画が当該国際会議等を円滑かつ確実に開催するために適切なものであること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "開催に要する経費に関する主催する者の責任の範囲が明確なものであること。"
                  }
                }
              ]
            }
          }
        ]
      },
