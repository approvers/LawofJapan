{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "002",
    "@Year": "21",
    "LawNum": "昭和二十一年大蔵省・厚生省・農林省・商工省・運輸省令第二号",
    "LawBody": {
      "LawTitle": "昭和二十一年大蔵、厚生、農林、商工、運輸省令第二号（会社経理応急措置法施行令第二十四条の規定による債権に関する件）",
      "Preamble": {
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "会社経理応急措置法施行令第二十四条の規定による債権に関する件を次のやうに定める。"
          }
        }
      },
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "会社経理応急措置法施行令（以下単に令といふ。）第二十四条に規定する政府とは、国、都道府県、市町村その他財務大臣の指定する公共団体をいふ。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "令第二十四条に規定する政府に準ずる機関（以下特定機関といふ。）は左に掲げるものをいふ。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "国民更生金庫"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "産業設備営団"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "帝国鉱業開発株式会社"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "日本石炭株式会社"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "日本倉庫統制株式会社"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "損害保険中央会"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "木船保険組合"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "漁船保険組合"
                  }
                },
                {
                  "@Num": "9",
                  "ItemTitle": "九",
                  "ItemSentence": {
                    "Sentence": "旧戦時特殊損害保険法第二条の規定により指定を受けた保険会社"
                  }
                },
                {
                  "@Num": "10",
                  "ItemTitle": "十",
                  "ItemSentence": {
                    "Sentence": "その他財務大臣の指定するもの"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "左に掲げる債権は、令第二十四条に規定する戦時補償金等よりこれを除外する。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "弁済期が昭和二十年八月十五日以前に到来し、同日までに決済（弁済、代物弁済、相殺又は更改をいふ。以下同じ。）を受けた請求権"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "政府又は特定機関の通常の業務に関して生じた請求権"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "死亡又は傷害に関する保険金又は補償金の請求権"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "救恤制度から生ずる請求権"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "その他財務大臣の指定するもの"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "前条第一号の請求権について、企業整備資金措置法第五条に規定する決済方法その他財務大臣の指定する決済方法で決済を受けた場合において、昭和二十年八月十五日以前にその決済として設定された政府特殊借入金、債務者特殊借入金、戦時金融金庫特殊借入金、特殊預金、特殊金銭信託その他財務大臣の指定する債権について同日以前に償還、払戻若しくは解除又は混同による消滅がなかつた金額があるときは、その金額については同日までに決済を受けなかつたものとみなす。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "○２",
                "ParagraphSentence": {
                  "Sentence": "前項の政府特殊借入金の債権について、これを銀行に譲渡して、財務大臣の指定する預金を取得した者の当該預金につき昭和二十年八月十五日以前に払戻のあつた金額は、これを政府特殊借入金につき同日以前に償還のあつた金額とみなす。"
                }
              }
            ]
          },
          {
            "@Num": "5",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": [
                  {
                    "@Function": "main",
                    "@Num": "1",
                    "#text": "第三条第二号の政府又は特定機関の通常の業務に関して生じた請求権とは、政府又は特定機関に対する俸給、賃金、年金、退職金その他の給与の請求権又は施設その他の不動産の賃借、建造、改良、維持若しくは修理又は備品及び消耗品の購入に関して生じた請求権その他政府又は特定機関の日常の活動に必要な役務、物資及び施設等の給付に関して生じた請求権及び特定機関たる保険会社、木船保険組合、漁船保険組合及び損害保険中央会に対する人又は法人の戦争事故に因らざる保険金の請求権をいふ。"
                  },
                  {
                    "@Function": "proviso",
                    "@Num": "2",
                    "#text": "但し旧陸軍省、旧海軍省及び旧軍需省航空兵器総局の通常の業務に関して生じた請求権については、俸給、賃金、年金、退職金その他の給与の請求権及び金銭の寄託その他これに準ずるものを原因とする請求権に限る。"
                  }
                ]
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "@AmendLawNum": "平成一二年八月二一日大蔵省・厚生省・農林水産省・通商産業省・運輸省令第四号",
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この省令は、平成十三年一月六日から施行する。"
          }
        }
      }
    }
  }
}
