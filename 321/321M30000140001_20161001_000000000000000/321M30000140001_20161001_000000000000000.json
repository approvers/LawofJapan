{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "001",
    "@Year": "21",
    "LawNum": "昭和二十一年大蔵省・厚生省令第一号",
    "LawBody": {
      "LawTitle": "昭和二十一年大蔵、厚生省令第一号（会社経理応急措置法施行令第八条第三項、第十二条第二項及び第十三条第二号の規定による命令）",
      "Preamble": {
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "会社経理応急措置法施行令第八条第三項、第十二条第二項及び第十三条第二号の規定による命令を次のやうに定める。"
          }
        }
      },
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "会社経理応急措置法施行令（以下単に令といふ）第八条第二項の期間経過後退職する者（指定時後において就職した者を除く。以下同じ。）の退職金（厚生年金保険法附則第十条及び第十一条の規定により支給する退職手当を含む。以下同じ。）は、令第八条第二項の期間を経過した日（以下特定日といふ。）を基準として特定日前後の勤続期間の割合で按分し、特定日迄の勤続期間に相当する金額は、これを旧勘定の負担として経理する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "○２",
                "ParagraphSentence": {
                  "Sentence": "前項の勤続期間の計算については、一月未満の端数はこれを一月とすることができる。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "令第十二条第二項の規定による金額の限度は、一人につき一万五千円とする。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "令第十三条第二号の規定による金額の限度は、左の各号の一により計算した金額とする。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "但しその金額が一人につき一万五千円を超ゆるときは一万五千円とする。"
                    }
                  ]
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": [
                        {
                          "@Function": "main",
                          "@Num": "1",
                          "#text": "指定時現在において当該特別経理会社が退職金給与規程を有しない場合には、指定時前三箇月間の一箇月平均月収額（賞与その他の臨時的給与を除く。以下同じ。）に勤続期間一年につき一箇月平均月収額の二分の一に相当する金額を加へた金額。"
                        },
                        {
                          "@Function": "proviso",
                          "@Num": "2",
                          "#text": "但しその金額が本人五百円、扶養家族一人につき百円の割合で計算した金額に達しないときは、本人五百円、扶養家族一人につき百円の割合で計算した金額。"
                        }
                      ]
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "指定時現在において、当該特別経理会社が退職金給与規程を有する場合には、その退職金給与規程により計算した金額、但しその金額が前号に準じ計算した金額に達しないときには前号に準じ計算した金額。"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "○２",
                "ParagraphSentence": {
                  "Sentence": "厚生年金保険法附則第十条及び第十一条の規定により支給する退職手当は前項の計算についてはこれを指定時現在における特別経理会社の退職金給与規程による退職金とみなす。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "○３",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "第一項第一号の勤続期間が一年未満の場合にはこれを一年とし、一年を超える場合には、一年未満の端数は月割計算とする。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "但し一月未満の端数を生じたときはこれを一月とする。"
                    }
                  ]
                }
              },
              {
                "@Num": "4",
                "ParagraphNum": "○４",
                "ParagraphSentence": {
                  "Sentence": "第一項において、特定日後退職する者の勤続期間については、特定日に退職したものとみなして計算する。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "第三条第一項第一号の扶養家族とは、左に掲げる者であつて主として退職する者の収入により生計を維持するものをいふ。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "配偶者（届出がなくても事実上婚姻関係と同様の事情にある者を含む）"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "満六十歳以上の直系尊属であつて本人と同一戸籍内にある者"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "満十八歳未満の直系尊属及び弟妹であつて本人と同一戸籍内にある者"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "不具癈疾者であつて本人と同一戸籍内にある者"
                  }
                }
              ]
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この省令は、公布の日から、これを施行する。"
          }
        }
      }
    }
  }
}
