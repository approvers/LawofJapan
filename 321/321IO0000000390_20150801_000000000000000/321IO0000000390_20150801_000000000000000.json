            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この勅令は、昭和二十二年四月一日から、これを適用する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "昭和二三年五月一〇日政令第一一〇号",
          "@Extract": "false",
          "@Type": "Amend",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Hide": "false",
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この政令は、昭和二十三年三月二十七日から、これを適用する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年六月七日政令第二四四号",
          "@Extract": "true",
          "@Type": "Amend",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Delete": "false",
            "@Hide": "false",
