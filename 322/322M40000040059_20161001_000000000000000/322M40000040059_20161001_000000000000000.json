          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": "○１",
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から、これを施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年八月二一日大蔵省令第六九号",
