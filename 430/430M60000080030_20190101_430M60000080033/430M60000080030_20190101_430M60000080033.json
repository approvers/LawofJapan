{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "030",
    "@Year": "30",
    "LawNum": "平成三十年文部科学省令第三十号",
    "LawBody": {
      "LawTitle": "スポーツにおける使用を禁止すべき物質及び国際規約に違反する行為を定める省令",
      "EnactStatement": "スポーツにおけるドーピングの防止活動の推進に関する法律（平成三十年法律第五十八号）第二条第三項の規定に基づき、スポーツにおける使用を禁止すべき物質及び国際規約に違反する行為を定める省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "1",
            "ArticleCaption": "（定義）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "この省令において使用する用語は、スポーツにおけるドーピングの防止活動の推進に関する法律（以下「法」という。）において使用する用語の例による。"
                }
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（禁止物質）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第二条第三項の文部科学省令で定める物質は、スポーツにおけるドーピングの防止に関する国際規約（次条において「ドーピング防止国際規約」という。）附属書Ⅰ二千十九年の禁止表（二千十九年一月一日に効力を生じる世界ドーピング防止規範）に掲げるものとする。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（国際規約に違反する行為）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": [
                  {
                    "@Function": "main",
                    "@Num": "1",
                    "#text": "法第二条第三項の文部科学省令で定める行為は、次に掲げるものとする。"
                  },
                  {
                    "@Function": "proviso",
                    "@Num": "2",
                    "#text": "ただし、ドーピング防止国際規約附属書Ⅱ治療目的使用に係る除外措置の許与に関する基準及び手続（世界ドーピング防止機構（ＷＡＤＡ）の「治療目的使用に係る除外措置に関する国際基準」（二千十九年一月一日発効）から抜粋）に定める治療目的使用に係る除外措置が許与される場合は、この限りでない。"
                  }
                ]
              },
              "Item": [
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "禁止物質の国際競技大会等出場スポーツ選手に対する使用その他の国際競技大会等出場スポーツ選手の競技に関する能力を不当に向上させると認められる行為"
                    }
                  }
                },
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "禁止物質の使用等の目的でこれに用いられる薬品その他の物品を所持する行為"
                    }
                  }
                },
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "ドーピングの検査を妨げる行為"
                    }
                  }
                },
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "ドーピング防止国際規約第二条第三項に定める行為（前各号に掲げるものを除く。）"
                    }
                  }
                }
              ]
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Hide": "false",
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この省令は、法の施行の日（平成三十年十月一日）から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成三十年十二月二十一日文部科学省令第三十三号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Hide": "false",
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この省令は、平成三十一年一月一日から施行する。"
              }
            }
          }
        }
      ]
    }
  }
}
