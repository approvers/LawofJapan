{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "030",
    "@Year": "44",
    "LawNum": "昭和四十四年通商産業省令第三十号",
    "LawBody": {
      "LawTitle": "経済産業研修所規則",
      "EnactStatement": "通商産業省設置法（昭和二十七年法律第二百七十五号）第二十二条の二第三項の規定に基づき、および同条第一項の規定を実施するため、通商産業研修所規則を次のように制定する。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（目的）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、経済産業研修所において行う研修（以下「研修」という。）について必要な事項を定めることを目的とする。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（研修員の決定）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "研修を受ける者（以下「研修員」という。）は、任命権者等の推せんに基づいて、経済産業研修所長（以下「所長」という。）が決定する。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（服務）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "研修員の入所期間中の服務については、関係法令によるほか、所長の定めるところによる。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（退所）",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "所長は、研修員が次の各号の一に該当する場合には、その研修員を退所させることができる。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "疾病その他の事由により継続して研修を受けることが適当でないと認めるとき。"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "研修所の秩序を乱す行為その他の研修員としてふさわしくない行為をしたとき。"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "所長は、前項の規定により研修員を退所させることとしたときは、その旨を当該研修員の任命権者等に通知するものとする。"
                }
              }
            ]
          },
          {
            "@Num": "5",
            "ArticleCaption": "（試験）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "所長は、研修の効果を測定するため試験を行うことができる。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（修了証書）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": [
                  {
                    "@Function": "main",
                    "@Num": "1",
                    "#text": "所長は、研修員が所定の課程を修了したときは、修了証書を授与するものとする。"
                  },
                  {
                    "@Function": "proviso",
                    "@Num": "2",
                    "#text": "ただし、研修の種類によりこれを省略することができる。"
                  }
                ]
              }
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（表彰）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "所長は、研修の成績が特に優秀な研修員に対して、表彰を行うことができる。"
              }
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（報告）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "所長は、研修の結果に関し、毎年度一回経済産業大臣に報告するものとする。"
              }
            }
          },
          {
            "@Num": "9",
            "ArticleCaption": "（研修結果の通知）",
            "ArticleTitle": "第九条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "所長は、研修員ごとに研修の結果を任命権者等に通知するものとする。"
              }
            }
          },
          {
            "@Num": "10",
            "ArticleCaption": "（雑則）",
            "ArticleTitle": "第十条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令に定めるもののほか、研修に関し必要な事項は、所長が定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "昭和五五年六月二八日通商産業省令第二六号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、附属機関、地方支分部局等に関する規定の整理等に関する法律（昭和五十五年法律第十三号）の施行の日（昭和五十五年六月三十日）から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "昭和六二年七月一日通商産業省令第四〇号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年八月一四日　平成一三年経済産業省令第三号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Num": "1",
              "ParagraphCaption": "（施行期日）",
              "ParagraphNum": "１",
              "ParagraphSentence": {
                "Sentence": "この中央省庁等改革推進本部令（次項及び第三項において「本部令」という。）は、内閣法の一部を改正する法律（平成十一年法律第八十八号）の施行の日（平成十三年一月六日）から施行する。"
              }
            },
            {
              "@Num": "2",
              "ParagraphCaption": "（この本部令の効力）",
              "ParagraphNum": "２",
              "ParagraphSentence": {
                "Sentence": "この本部令は、その施行の日に、中央省庁等改革のための経済産業省組織関係命令の整備に関する命令（平成十三年経済産業省令第三号）となるものとする。"
              }
            }
          ]
        },
        {
          "@AmendLawNum": "平成一三年三月三〇日経済産業省令第一二二号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、平成十三年四月一日から施行する。"
            }
          }
        }
      ]
    }
  }
}
