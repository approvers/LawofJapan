{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "46",
    "@Year": "20",
    "LawNum": "平成二十年厚生労働省令第四十六号",
    "LawBody": {
      "LawTitle": "救急医療用ヘリコプターを用いた救急医療の確保に関する特別措置法に規定する助成金交付事業に係る登録に関する省令",
      "EnactStatement": "救急医療用ヘリコプターを用いた救急医療の確保に関する特別措置法（平成十九年法律第百三号）第九条第一項、第三項各号及び第十四条の規定に基づき、救急医療用ヘリコプターを用いた救急医療の確保に関する特別措置法に規定する助成金交付事業に係る登録に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（助成金交付事業）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "救急医療用ヘリコプターを用いた救急医療の確保に関する特別措置法（平成十九年法律第百三号。以下「法」という。）第九条第一項の厚生労働省令で定める事業（以下「助成金交付事業」という。）は、次の各号に掲げる費用に充てるための助成金を交付する事業であって、営利を目的とするものでないものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "法第二条に規定する救急医療用ヘリコプター（以下「救急医療用ヘリコプター」という。）の確保及びその運航のための基盤整備に要する費用"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "救急医療用ヘリコプターの運航に要する費用"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "救急医療用ヘリコプターの運航の円滑化を図るための措置に要する費用"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "救急医療用ヘリコプターの運航に関する調査研究に要する費用"
                  }
                }
              ]
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（登録の申請）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条第一項の登録を受けようとする法人は、申請書に次に掲げる書類を添付して、厚生労働大臣に提出しなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "定款又は寄附行為（以下「定款等」という。）"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "法第九条第二項各号の規定に該当しない旨を説明する書類"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "次条及び第四条各号の基準に適合することを証する書類"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（法第九条第三項第一号の厚生労働省令で定める基準）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条第三項第一号の厚生労働省令で定める基準は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "基金に管理者が置かれていること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "基金は、寄附金及び当該基金の運用により生じた収益をもって充てられていること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "基金は、助成金の交付及びこれに要する費用並びに当該基金の管理及び運用に要する費用以外の費用に充てられていないこと。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "助成金の交付に要する費用並びに当該基金の管理及び運用に要する費用の額は、実費を勘案して合理的であると認められるものであること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "基金の支出について、次条第五号の委員会の意見を聴取していること。"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "基金の運用状況に関する記録が作成されていること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（法第九条第三項第二号の厚生労働省令で定める基準）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条第三項第二号の厚生労働省令で定める基準は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "役員に救急医療に関する識見を有する者が含まれていること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "救急医療の充実に資する事業について相当の実績を有すること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "助成金交付事業を継続的に実施できると認められる計画を有すること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "特定の地域に偏ることなく全国的に助成金交付事業を実施すること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "医療、法律、会計等に関して識見を有する者であって当該法人の役員、社員、評議員又は使用人でないものからなる委員会を設置していること。"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "助成金交付事業を適確かつ円滑に実施するに足りる経理的基礎及び技術的能力があること。"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "役員のうちには、各役員について、その役員、その配偶者及び三親等以内の親族が役員の総数の三分の一を超えて含まれることがないこと。"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "社員その他の構成員、役員、評議員又は使用人及びこれらの者の配偶者又は三親等以内の親族に対して特別の利益を与えないこと。"
                  }
                },
                {
                  "@Num": "9",
                  "ItemTitle": "九",
                  "ItemSentence": {
                    "Sentence": "不適正な経理が行われていないこと。"
                  }
                },
                {
                  "@Num": "10",
                  "ItemTitle": "十",
                  "ItemSentence": {
                    "Sentence": "当該法人につき法令に違反する事実、偽りその他不正の行為により利益を得、又は得ようとした事実その他公益に反する事実がないこと。"
                  }
                },
                {
                  "@Num": "11",
                  "ItemTitle": "十一",
                  "ItemSentence": {
                    "Sentence": "定款等において、法第十二条の規定により登録が取り消された場合にその基金の全額を国、地方公共団体又は他の法第九条第一項の登録を受けている法人に贈与する旨の定めがあること。"
                  }
                },
                {
                  "@Num": "12",
                  "ItemTitle": "十二",
                  "ItemSentence": {
                    "Sentence": "定款等において、当該法人が解散した場合にその残余財産が国、地方公共団体又は他の救急医療の充実を目的とする法人に帰属する旨の定めがあること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（実施状況の報告）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第九条第一項の登録を受けている法人は、毎事業年度経過後三月以内に、助成金交付事業の実施状況について厚生労働大臣に報告しなければならない。"
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この省令は、平成二十年四月一日から施行する。"
          }
        }
      }
    }
  }
}
