                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Column": [
                            {
                              "@LineBreak": "false",
                              "@Num": "1",
                              "Sentence": {
                                "@WritingMode": "vertical",
                                "#text": "介護を要する障害として国家公安委員会規則で定める障害"
                              }
                            },
                            {
                              "@LineBreak": "false",
                              "@Num": "2",
                              "Sentence": {
                                "@WritingMode": "vertical",
                                "#text": "三千万円"
                              }
                            }
                          ]
                        }
                      },
                      {
                        "@Delete": "false",
                        "@Hide": "false",
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Column": [
                            {
                              "@LineBreak": "false",
                              "@Num": "1",
                              "Sentence": {
                                "@WritingMode": "vertical",
                                "#text": "イに掲げる障害以外の重度の障害として国家公安委員会規則で定める障害"
                              }
                            },
                            {
                              "@LineBreak": "false",
                              "@Num": "2",
                              "Sentence": {
                                "@WritingMode": "vertical",
                                "#text": "二千万円"
                              }
                            }
                          ]
                        }
                      },
                      {
                        "@Delete": "false",
                        "@Hide": "false",
                        "@Num": "3",
