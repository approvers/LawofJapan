{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "Act",
    "@Num": "3",
    "@Year": "11",
    "LawNum": "平成十一年法律第三号",
    "LawBody": {
      "LawTitle": "平成十一年度における公債の発行の特例に関する法律",
      "MainProvision": {
        "Article": [
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "1",
            "ArticleCaption": "（目的）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "この法律は、平成十一年度における国の財政収支の状況にかんがみ、同年度における公債の発行の特例に関する措置を定めることにより、同年度の適切な財政運営に資することを目的とする。"
                }
              }
            }
          },
          {
            "@Delete": "false",
            "@Hide": "false",
            "@Num": "2",
            "ArticleCaption": "（特例公債の発行等）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Hide": "false",
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "政府は、財政法（昭和二十二年法律第三十四号）第四条第一項ただし書の規定により発行する公債のほか、平成十一年度の一般会計の歳出の財源に充てるため、予算をもって国会の議決を経た金額の範囲内で、公債を発行することができる。"
                  }
                }
              },
              {
                "@Hide": "false",
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Num": "1",
                      "@WritingMode": "vertical",
                      "#text": "前項の規定による公債の発行は、平成十二年六月三十日までの間、行うことができる。"
                    },
                    {
                      "@Num": "2",
                      "@WritingMode": "vertical",
                      "#text": "この場合において、同年四月一日以後発行される同項の公債に係る収入は、平成十一年度所属の歳入とする。"
                    }
                  ]
                }
              },
              {
                "@Hide": "false",
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "政府は、第一項の議決を経ようとするときは、同項の公債の償還の計画を国会に提出しなければならない。"
                  }
                }
              },
              {
                "@Hide": "false",
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "政府は、第一項の規定により発行した公債については、その速やかな減債に努めるものとする。"
                  }
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": {
        "@Extract": "false",
        "@Type": "New",
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Hide": "false",
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": {
              "@WritingMode": "vertical",
              "#text": "この法律は、平成十一年四月一日から施行する。"
            }
          }
        }
      }
    }
  }
}
