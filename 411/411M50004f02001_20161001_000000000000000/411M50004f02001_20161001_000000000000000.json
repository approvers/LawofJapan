{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "001",
    "@Year": "11",
    "LawNum": "平成十一年総理府・厚生省・農林水産省・通商産業省・運輸省・建設省令第一号",
    "LawBody": {
      "LawTitle": "特定商取引適正化業務を行う者に関する命令",
      "EnactStatement": "訪問販売等に関する法律（昭和五十一年法律第五十七号）第十八条の三第一項の規定に基づき、及び同法を実施するため、訪問販売取引等適正化業務を行う者に関する命令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（指定の申請）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "特定商取引に関する法律（以下「法」という。）第六十一条第一項の規定による指定（以下「指定」という。）を受けようとする者は、次の事項を記載した申請書を主務大臣に提出しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "名称及び住所並びに代表者の氏名"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "事務所の所在地"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の申請書には、次に掲げる書類を添付しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "定款及び登記事項証明書"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "申請の日の属する事業年度の前事業年度における事業報告書、貸借対照表、収支決算書、財産目録その他の特定商取引適正化業務を適正かつ確実に実施できることを証する書面"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "役員の名簿及び履歴書"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "指定の申請に関する意思の決定を証する書類"
                    }
                  },
                  {
                    "@Num": "5",
                    "ItemTitle": "五",
                    "ItemSentence": {
                      "Sentence": "組織及び運営に関する事項を記載した書類"
                    }
                  }
                ]
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "主務大臣は、前項に規定するもののほか、指定のため必要な書類の提出を求めることができる。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（指定の基準）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "主務大臣は、指定の申請が次の各号に適合していると認めるときでなければ、その指定をしてはならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "特定商取引適正化業務を適正かつ確実に行うため必要な経理的基礎及び技術的能力を有すること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "役員又は社員の構成が特定商取引適正化業務の公正な実施に支障を及ぼすおそれのないものであること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "特定商取引適正化業務以外の業務を行っているときは、当該業務を行うことにより特定商取引適正化業務が不公正になるおそれがないこと。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "その指定をすることによって特定商取引適正化業務の適正かつ確実な実施を阻害することとならないこと。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（変更の届出）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "指定を受けた法人（以下「指定法人」という。）は、その名称、住所、代表者又は事務所の所在地を変更しようとするときは、あらかじめ、その旨を主務大臣に届け出なければならない。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（事業計画等）",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Num": "1",
                      "#text": "指定法人は、毎事業年度の事業計画書及び収支予算書を作成し、当該事業年度の開始前に主務大臣に提出しなければならない。"
                    },
                    {
                      "@Num": "2",
                      "#text": "これを変更しようとするときも、同様とする。"
                    }
                  ]
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "指定法人は、毎事業年度終了後三月以内に、事業報告書、貸借対照表、収支決算書及び財産目録を作成し、主務大臣に提出しなければならない。"
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この命令は、訪問販売等に関する法律及び割賦販売法の一部を改正する法律（平成十一年法律第三十四号）の施行の日（平成十一年十月二十二日）から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一三年五月三〇日内閣府・厚生労働省・農林水産省・経済産業省・国土交通省令第一号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この命令は、平成十三年六月一日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一七年三月四日内閣府・厚生労働省・農林水産省・経済産業省・国土交通省令第二号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この命令は、不動産登記法の施行に伴う関係法律の整備等に関する法律の施行の日（平成十七年三月七日）から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成二〇年一二月一日内閣府・厚生労働省・農林水産省・経済産業省・国土交通省令第二号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この命令は、一般社団法人及び一般財団法人に関する法律の施行の日（平成二十年十二月一日）から施行する。"
            }
          }
        }
      ]
    }
  }
}
