            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この省令は、法の施行の日（平成三十一年四月一日）から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "令和元年六月二八日経済産業省・国土交通省令第一号",
          "@Type": "Amend",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
