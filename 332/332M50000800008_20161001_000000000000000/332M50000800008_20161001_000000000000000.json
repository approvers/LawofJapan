    "LawBody": {
      "LawTitle": "船員労働統計調査規則",
      "EnactStatement": "統計法第三条第二項の規定に基き、この省令を制定する。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（通則）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "統計法（平成十九年法律第五十三号。以下「法」という。）第十八条の規定に基づく船員労働統計の調査（以下「調査」という。）に関しては、この省令の定めるところによる。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（調査の目的）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調査は、船員の報酬、雇用等に関する実態を明らかにすることを目的とする。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（調査の対象）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調査は、船員法（昭和二十二年法律第百号）第一条に規定する船員であつて、次の各号に掲げる者について行う。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "漁船及び特殊船（引船、はしけ及び官公署船をいう。以下同じ。）以外の国土交通大臣が指定する船舶に乗り組む者"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "漁船に乗り組む者"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "特殊船に乗り組む者"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（調査事項）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調査は、次に掲げる事項について行う。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "報酬"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "労働時間、休日及び有給休暇"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "船員の数"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "船員の年令、経験年数及び職種"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "その他前各号に関連する事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（調査の区分）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調査は、次表の上欄に掲げる調査の対象ごとに、同表の下欄に掲げる調査の区分により行う。"
              },
