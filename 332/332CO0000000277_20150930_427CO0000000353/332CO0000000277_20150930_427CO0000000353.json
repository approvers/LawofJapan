            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この政令は、昭和四十四年六月二十三日から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "昭和四七年四月二八日政令第一〇九号",
          "SupplProvisionLabel": "附　則",
