            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この政令は、法施行の日（昭和三十二年九月二日）から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "昭和三八年七月一六日政令第二六一号",
