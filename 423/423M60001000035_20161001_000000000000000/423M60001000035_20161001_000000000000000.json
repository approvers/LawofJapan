                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "関係都道県の協力を得て、関係都道県の公報又は広報紙に掲載すること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "関係市町村の協力を得て、関係市町村の公報又は広報紙に掲載すること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "時事に関する事項を掲載する日刊新聞紙への掲載"
                  }
                }
              ]
            }
