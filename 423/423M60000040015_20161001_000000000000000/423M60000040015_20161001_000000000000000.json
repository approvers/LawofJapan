            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": [
                {
                  "@Function": "main",
                  "@Num": "1",
                  "#text": "この省令は、平成二十三年七月一日から施行する。"
                },
                {
                  "@Function": "proviso",
                  "@Num": "2",
                  "#text": "ただし、第二条の規定は、同年五月二日から施行する。"
                }
              ]
            }
          }
        },
        {
          "@AmendLawNum": "平成二七年一〇月一三日財務省令第八〇号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
