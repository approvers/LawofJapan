{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "59",
    "@Year": "23",
    "LawNum": "平成二十三年内閣府令第五十九号",
    "LawBody": {
      "LawTitle": "沖縄科学技術大学院大学学園法施行規則",
      "EnactStatement": "沖縄科学技術大学院大学学園法（平成二十一年法律第七十六号）第九条第一項、第十一条及び第十二条第一項の規定に基づき、並びに同法を実施するため、沖縄科学技術大学院大学学園法施行規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（事業計画の作成）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "沖縄科学技術大学院大学学園法（以下「法」という。）第九条第一項に規定する事業計画には、次に掲げる事項に関する計画を記載しなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "沖縄科学技術大学院大学における教育研究に関する事項"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "沖縄科学技術大学院大学学園（以下「学園」という。）の業務運営における適切性及び透明性の確保並びにその効率化に関する事項"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "学園の財政基盤の強化に関する事項"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "前三号に掲げるもののほか、学園の業務に関する事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（事業計画の認可の申請）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "学園は、法第九条第一項前段の規定により事業計画の認可を受けようとするときは、事業計画を記載した申請書に次に掲げる書類を添付して、当該会計年度開始三十日前までに、内閣総理大臣に提出しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "収支予算書"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "前会計年度の予定貸借対照表及び予定損益計算書"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "当該会計年度の予定貸借対照表及び予定損益計算書"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "前三号に掲げるもののほか、事業計画の参考となる書類"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Num": "1",
                      "#text": "学園は、法第九条第一項後段の規定により事業計画の変更の認可を受けようとするときは、次に掲げる事項を記載した申請書に当該変更後の事業計画を添えて、内閣総理大臣に提出しなければならない。"
                    },
                    {
                      "@Num": "2",
                      "#text": "この場合において、当該変更が前項の規定により当該事業計画の認可を申請するときに添付した同項各号の書類の変更を伴うときは、当該変更後の書類を添付しなければならない。"
                    }
                  ]
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "変更しようとする事項"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "変更しようとする年月日"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "変更の理由"
                    }
                  }
                ]
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（借入れの認可の申請）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "学園は、法第十条の規定により弁済期限が一年を超える資金の借入れの認可を受けようとするときは、次に掲げる事項を記載した申請書を内閣総理大臣に提出しなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "借入れを必要とする理由"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "借入金の額"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "借入先"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "借入金の利率"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "借入金の償還の方法及び期限"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "利息の支払の方法及び期限"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "その他必要な事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（重要な財産の範囲）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第十一条に規定する内閣府令で定める重要な財産は、土地及び建物並びに内閣総理大臣が指定するその他の財産とする。"
              }
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（重要な財産の譲渡等の認可の申請）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "学園は、法第十一条の規定により重要な財産を譲り受け、譲渡し、交換し、又は担保に供すること（以下「譲渡等」という。）について、認可を受けようとするときは、次に掲げる事項を記載した申請書に譲渡等を証する書面を添付して、内閣総理大臣に提出しなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "譲渡等に係る財産の内容及び評価額"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "譲渡等の条件"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "譲渡等の方法"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "学園の業務運営上支障がない旨及びその理由"
                  }
                }
              ]
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（会計の原則）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "学園の会計については、この府令の定めるところにより、この府令に定めのないものについては、一般に公正妥当と認められる企業会計の基準に従うものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "金融庁組織令（平成十年政令第三百九十二号）第二十四条第一項に規定する企業会計審議会により公表された企業会計の基準は、前項に規定する一般に公正妥当と認められる企業会計の基準に該当するものとする。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "学園に適用する会計の基準として内閣総理大臣が別に公示する沖縄科学技術大学院大学学園会計基準は、第一項に規定する一般に公正妥当と認められる企業会計の基準に優先して適用されるものとする。"
                }
              }
            ]
          },
          {
            "@Num": "7",
            "ArticleCaption": "（償却資産の指定等）",
            "ArticleTitle": "第七条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "内閣総理大臣は、学園が業務のため取得しようとしている償却資産についてその減価に対応すべき収益の獲得が予定されないと認められる場合には、その取得までの間に限り、当該償却資産を指定することができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の指定を受けた資産の減価償却については、減価償却費は計上せず、資産の減価額と同額を拠出剰余金に対する控除として計上するものとする。"
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": {
        "@Extract": "true",
        "SupplProvisionLabel": "附　則",
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この府令は、法の施行の日（平成二十三年十一月一日）から施行する。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（独立行政法人沖縄科学技術研究基盤整備機構の財務及び会計に関する内閣府令の廃止）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "独立行政法人沖縄科学技術研究基盤整備機構の財務及び会計に関する内閣府令（平成十七年内閣府令第八十六号）は、廃止する。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（成立の際の会計処理の特例）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "学園の成立の際法附則第四条第一項の規定により学園に拠出されたものとされる資産のうち償却資産については、第七条第一項の指定があったものとみなす。"
              }
            }
          }
        ]
      }
    }
  }
}
