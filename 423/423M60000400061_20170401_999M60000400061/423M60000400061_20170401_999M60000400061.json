{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "61",
    "@Year": "23",
    "LawNum": "平成二十三年経済産業省令第六十一号",
    "LawBody": {
      "LawTitle": "電気事業者による再生可能エネルギー電気の調達に関する特別措置法に基づく費用負担調整機関に関する省令",
      "EnactStatement": "電気事業者による再生可能エネルギー電気の調達に関する特別措置法（平成二十三年法律第百八号）第二十条第一項、第二十一条第一項及び第三項並びに第二十五条の規定に基づき、並びに同法を実施するため、電気事業者による再生可能エネルギー電気の調達に関する特別措置法に基づく費用負担調整機関に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（定義）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令において使用する用語は、電気事業者による再生可能エネルギー電気の調達に関する特別措置法（以下「法」という。）において使用する用語の例による。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（指定の申請）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第五十五条第一項の規定により調整機関の指定を受けようとする者（以下「指定申請者」という。）は、様式第一による申請書に次の書類を添えて経済産業大臣に提出しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "定款及び登記事項証明書"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "次に掲げる指定申請者の区分に応じ、当該各号に定める書類"
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Column": [
                            {
                              "@Num": "1",
                              "Sentence": "一般社団法人"
                            },
                            {
                              "@Num": "2",
                              "Sentence": "社員の氏名及び略歴（社員が法人である場合は、その法人の名称）を記載した書類"
                            }
                          ]
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Column": [
                            {
                              "@Num": "1",
                              "Sentence": "一般財団法人"
                            },
                            {
                              "@Num": "2",
                              "Sentence": "評議員の氏名及び略歴を記載した書類"
                            }
                          ]
                        }
                      },
                      {
                        "@Num": "3",
                        "Subitem1Title": "ハ",
                        "Subitem1Sentence": {
                          "Column": [
                            {
                              "@Num": "1",
                              "Sentence": "株式会社"
                            },
                            {
                              "@Num": "2",
                              "Sentence": "発行済株式総数の百分の五以上の株式を有する株主の氏名又は名称、住所及びその有する株式の数を記載した書類"
                            }
                          ]
                        }
                      }
                    ]
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "指定の申請に関する意思の決定を証する書類"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "調整業務の実施に関する計画及び費用の見込みを記載した書類"
                    }
                  },
                  {
                    "@Num": "5",
                    "ItemTitle": "五",
                    "ItemSentence": {
                      "Sentence": "申請の日の属する事業年度の前事業年度における貸借対照表、損益計算書及び財産目録（申請の日の属する事業年度に設立された法人にあっては、その設立時における財産目録）"
                    }
                  },
                  {
                    "@Num": "6",
                    "ItemTitle": "六",
                    "ItemSentence": {
                      "Sentence": "役員の氏名及び略歴を記載した書類"
                    }
                  },
                  {
                    "@Num": "7",
                    "ItemTitle": "七",
                    "ItemSentence": {
                      "Sentence": "役員及び職員の配置の状況並びに事務の機構及び分掌に関する事項を記載した書類"
                    }
                  },
                  {
                    "@Num": "8",
                    "ItemTitle": "八",
                    "ItemSentence": {
                      "Sentence": "現に行っている業務の概要を記載した書類"
                    }
                  },
                  {
                    "@Num": "9",
                    "ItemTitle": "九",
                    "ItemSentence": {
                      "Sentence": "役員が法第五十五条第一項第五号イ及びロに該当する者でない旨を誓約する書類"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "経済産業大臣は、前項各号に掲げるもののほか、指定申請者に対し、指定のために必要な書類の提出を求めることができる。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（変更の届出）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調整機関は、法第五十五条第四項の規定による届出をしようとするときは、様式第二による届出書を経済産業大臣に提出しなければならない。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（調整業務規程の記載事項）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第五十六条第一項の経済産業省令で定める事項は、次のとおりとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "調整業務を行う時間及び休日に関する事項"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "調整業務を行う事務所に関する事項"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "交付金の交付及び納付金の徴収の方法に関する事項"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "納付金の管理の方法に関する事項"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "法第三十八条の規定により政府が講ずる予算上の措置に係る資金の管理の方法に関する事項"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "調整機関の役員の選任及び解任に関する事項"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "調整業務に関する秘密の保持に関する事項"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "調整業務に関する帳簿及び書類の管理及び保存に関する事項"
                  }
                },
                {
                  "@Num": "9",
                  "ItemTitle": "九",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げるもののほか、調整業務に関し必要な事項"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（調整業務規程の認可の申請）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "調整機関は、法第五十六条第一項前段の規定により調整業務規程の認可を受けようとするときは、様式第三による申請書に当該認可に係る調整業務規程を添えて経済産業大臣に提出しなければならない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "調整機関は、法第五十六条第一項後段の規定により調整業務規程の変更の認可を受けようとするときは、様式第四による申請書に当該変更の明細を記載した書面を添えて経済産業大臣に提出しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（事業計画書及び収支予算書の認可の申請）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "調整機関は、法第五十七条第一項前段の規定により事業計画書及び収支予算書の認可を受けようとするときは、毎事業年度開始の日の一月前までに、様式第五による申請書に、事業計画書及び収支予算書を添えて経済産業大臣に提出しなければならない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "調整機関は、法第五十七条第一項後段の規定により事業計画書及び収支予算書の変更の認可を受けようとするときは、様式第六による申請書に当該変更の明細を記載した書面を添えて経済産業大臣に提出しなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "7",
            "ArticleCaption": "（事業報告書及び収支決算書の提出）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調整機関は、法第五十七条第三項の事業報告書及び収支決算書を毎事業年度終了後三月以内に貸借対照表を添えて経済産業大臣に提出しなければならない。"
              }
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（業務の休廃止）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "調整機関は、法第五十九条の許可を受けようとするときは、様式第七による申請書を経済産業大臣に提出しなければならない。"
              }
            }
          },
          {
            "@Num": "9",
            "ArticleCaption": "（帳簿）",
            "ArticleTitle": "第九条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第六十一条の経済産業省令で定める事項は、次のとおりとする。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "交付金を交付した電気事業者の氏名又は名称"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "電気事業者ごとの交付金の額及び交付の年月日"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "納付金を徴収した小売電気事業者等の氏名又は名称"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "小売電気事業者等ごとの納付金の額及び徴収の年月日"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "法第六十一条の帳簿は、調整業務を行う事務所ごとに備え付け、調整業務の全部を廃止するまで保存しなければならない。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "前項に規定する保存は、電磁的方法（電子的方法、磁気的方法その他の人の知覚によっては認識することができない方法をいう。）による記録に係る記録媒体により行うことができる。"
                }
              },
              {
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": "法第六十五条第一項の規定による指定の取消しが行われた場合において、当該指定を取り消された法人は、経済産業大臣が法第五十五条第一項の規定により新たに指定する調整機関に法第六十一条の帳簿を速やかに引き渡さなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "10",
            "ArticleCaption": "（立入検査）",
            "ArticleTitle": "第十条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第七十六条第四項の立入検査をする職員の身分を示す証明書は、様式第八によるものとする。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、平成二十四年七月一日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成二九年三月一四日経済産業省令第一三号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
