            "ParagraphSentence": {
              "Sentence": {
                "@WritingMode": "vertical",
                "#text": "この命令は、法の施行の日（平成二十三年十二月二十七日）から施行する。"
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成三〇年三月三〇日内閣府・国土交通省令第二号",
          "@Type": "Amend",
          "SupplProvisionLabel": "附　則",
