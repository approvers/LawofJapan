{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "Rule",
    "@Num": "5",
    "@Year": "23",
    "LawNum": "平成二十三年国家公安委員会規則第五号",
    "LawBody": {
      "LawTitle": "留置施設の巡察に関する規則",
      "EnactStatement": "刑事収容施設及び被収容者等の処遇に関する法律（平成十七年法律第五十号）第十九条の規定に基づき、留置施設の巡察に関する規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（実施項目）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "刑事収容施設及び被収容者等の処遇に関する法律第十九条の規定による巡察（以下単に「巡察」という。）は、次に掲げる事項について行うものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "留置施設の管理運営に関すること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "被留置者の処遇に関すること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（実施方法）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "巡察は、関係者からの聴取り、書類の閲覧、実地の視察その他適当な方法により実施するものとする。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（実施）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "巡察は、毎年度少なくとも一回、全ての都道府県警察において実施しなければならない。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（留意事項）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "巡察を行うに当たっては、次に掲げる事項に留意しなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "留置施設の規模、構造その他の状況を考慮すること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "資料及び情報を十分に収集し、正確な事実の把握に努めること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "必要な限度を超えて関係者の業務に支障を及ぼさないよう注意すること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（国家公安委員会への報告）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "警察庁長官（以下「長官」という。）は、国家公安委員会に対し、毎年度少なくとも一回、巡察の実施状況を報告しなければならない。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（巡察の結果に基づく措置）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "長官は、巡察の結果に基づき、必要な措置を講ずるものとする。"
              }
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（細目）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この規則に定めるもののほか、巡察の実施に関し必要な事項の細目は、長官が定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この規則は、平成二十三年四月一日から施行する。"
          }
        }
      }
    }
  }
}
