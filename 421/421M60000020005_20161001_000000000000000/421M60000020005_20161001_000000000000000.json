{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "5",
    "@Year": "21",
    "LawNum": "平成二十一年外務省令第五号",
    "LawBody": {
      "LawTitle": "選考による外務職員の採用に関する省令",
      "EnactStatement": "外務公務員法（昭和二十七年法律第四十一号）第十条の規定に基づき、選考による外務職員の採用に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（選考による採用）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "外務職員（以下「職員」という。）の採用は、左に掲げる場合には、選考によって行うものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "専ら財務、商務、農務、労働等に関する外交領事事務に従事する職員を採用する場合"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "通信、外交史料編さん等特別の技能を必要とする外交領事事務に従事する職員を採用する場合"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "外交領事事務（これと直接関連する業務を含む。）に従事していた者を再び職員に採用する場合"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "在外公館において一般的補助業務に従事する職員を採用する場合"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げる場合を除く外、外務大臣が特に必要と認める場合"
                  }
                }
              ]
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（選考の機関）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "職員の採用のための選考は、外務大臣が行う。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "外務大臣は、選考に関する権限を部内の職員に委任することができる。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "前項の権限を委任された職員は、必要の都度選考を実施し、その結果を外務大臣に報告するものとする。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（選考の方法）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "選考は、次条に定める選考の基準に基づいて判定することによって行うほか、必要に応じ、実地試験、筆記試験その他の方法によることができる。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（選考の基準）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "職員の採用のための選考は、左に掲げる基準によるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "第一条第一項第一号から第三号まで及び第五号に掲げる場合にあっては、採用前十年以内において就こうとする官職の職務と同種の又はこれと関連のある職務について経験を有し、且つ、就こうとする官職の属する職制上の段階の標準的な官職に係る標準職務遂行能力及び当該就こうとする官職についての適性を有すると認められる者であること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "第一条第一項第四号に掲げる場合にあっては、就こうとする官職の属する職制上の段階の標準的な官職に係る標準職務遂行能力及び当該就こうとする官職についての適性を有すると予測し得る経験又は知識若しくは技能を有する者であること。"
                  }
                }
              ]
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": [
          {
            "@Num": "1",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この省令は、国家公務員法等の一部を改正する法律（平成十九年法律第百八号）附則第一条第三号に掲げる規定の施行の日（平成二十一年四月一日）から施行する。"
            }
          },
          {
            "@Num": "2",
            "ParagraphNum": "２",
            "ParagraphSentence": {
              "Sentence": "選考による外務職員の採用及び外務職員の昇任に関する省令（昭和二十七年外務省令第十七号）は、廃止する。"
            }
          }
        ]
      }
    }
  }
}
