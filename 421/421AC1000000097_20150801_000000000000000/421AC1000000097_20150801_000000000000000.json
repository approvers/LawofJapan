                    "ParagraphNum": "２",
                    "ParagraphSentence": {
                      "Sentence": {
                        "@WritingMode": "vertical",
                        "#text": "肝炎対策基本指針は、次に掲げる事項について定めるものとする。"
                      }
                    },
                    "Item": [
                      {
                        "@Delete": "false",
                        "@Hide": "false",
