{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "Rule",
    "@Num": "3",
    "@Year": "21",
    "LawNum": "平成二十一年会計検査院規則第三号",
    "LawBody": {
      "LawTitle": "会計検査院退職手当審査会規則",
      "EnactStatement": "国家公務員退職手当法（昭和二十八年法律第百八十二号）第十八条第七項の規定に基づき、会計検査院退職手当審査会規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（設置）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "国家公務員退職手当法（昭和二十八年法律第百八十二号）第十九条第七項に規定する会計検査院規則で定める機関として、会計検査院に会計検査院退職手当審査会（以下「審査会」という。）を置く。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "審査会は、国家公務員退職手当法の規定によりその権限に属させられた事項を処理する。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（組織）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "審査会は、委員三人で組織する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "審査会に、特別の事項を調査審議させるため必要があるときは、臨時委員を置くことができる。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（委員等の任命）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "委員及び臨時委員は、学識経験のある者のうちから、院長が任命する。"
              }
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（委員の任期等）",
            "ArticleTitle": "第四条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "委員の任期は、二年とする。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "ただし、補欠の委員の任期は、前任者の残任期間とする。"
                    }
                  ]
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "委員は、再任されることができる。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "臨時委員は、その者の任命に係る当該特別の事項に関する調査審議が終了したときは、解任されるものとする。"
                }
              },
              {
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": "委員及び臨時委員は、非常勤とする。"
                }
              }
            ]
          },
          {
            "@Num": "5",
            "ArticleCaption": "（会長）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "審査会に、会長を置き、委員の互選により選任する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "会長は、会務を総理し、審査会を代表する。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "会長に事故があるときは、あらかじめその指名する委員が、その職務を代理する。"
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（議事）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "審査会は、委員及び議事に関係のある臨時委員の過半数が出席しなければ、会議を開き、議決することができない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "審査会の議事は、委員及び議事に関係のある臨時委員で会議に出席したものの過半数で決し、可否同数のときは、会長の決するところによる。"
                }
              }
            ]
          },
          {
            "@Num": "7",
            "ArticleCaption": "（庶務）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "審査会の庶務は、会計検査院事務総長官房人事課において処理する。"
              }
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（雑則）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この規則に定めるもののほか、議事の手続その他審査会の運営に関し必要な事項は、会長が審査会に諮って定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この規則は、国家公務員退職手当法等の一部を改正する法律（平成二十年法律第九十五号）の施行の日（平成二十一年四月一日）から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成二六年五月三〇日会計検査院規則第六号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この規則は、公布の日から施行する。"
            }
          }
        }
      ]
    }
  }
}
