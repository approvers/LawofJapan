            "ArticleTitle": "第十三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "科学技術・学術政策研究所に、顧問を置くことができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "顧問は、科学技術・学術政策研究所の所掌事務に関する重要事項に参画する。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "顧問は、非常勤とする。"
                }
              }
            ]
          }
        ]
