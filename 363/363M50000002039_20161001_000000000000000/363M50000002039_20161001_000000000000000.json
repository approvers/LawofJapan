    "LawBody": {
      "LawTitle": "科学技術・学術政策研究所組織規則",
      "EnactStatement": "科学技術庁組織令（昭和三十一年政令第百四十二号）第五十四条第二項の規定に基づき、科学技術政策研究所組織規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（位置）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "科学技術・学術政策研究所は、東京都に置く。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（所長）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "科学技術・学術政策研究所に、所長を置く。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "所長は、科学技術・学術政策研究所の事務を掌理する。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（総務研究官）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "科学技術・学術政策研究所に、総務研究官一人を置く。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "総務研究官は、調査及び研究に関する重要事項に関し、総括して指導を行う。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（科学技術・学術政策研究所に置く課等）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "科学技術・学術政策研究所に、総務課、企画課、科学技術・学術基盤調査研究室、科学技術予測センター並びに文部科学大臣の承認を受けて所長が定める研究グループ二及び調査研究グループ二を置く。"
              }
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（総務課の所掌事務）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "総務課は、次に掲げる事務をつかさどる。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "機密に関すること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "人事に関すること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "所長の官印及び所印の保管に関すること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "公文書類の接受、発送、編集及び保存に関すること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "職員の福利厚生に関すること。"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "予算、決算及び会計並びに会計の監査に関すること。"
                  }
                },
                {
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": "行政財産及び物品の管理に関すること。"
                  }
                },
                {
                  "@Num": "8",
                  "ItemTitle": "八",
                  "ItemSentence": {
                    "Sentence": "営繕に関すること。"
                  }
                },
                {
                  "@Num": "9",
                  "ItemTitle": "九",
                  "ItemSentence": {
                    "Sentence": "科学技術・学術政策研究所の所掌事務を行うための情報処理システムの開発及び改善に関すること。"
                  }
                },
                {
                  "@Num": "10",
                  "ItemTitle": "十",
                  "ItemSentence": {
                    "Sentence": "文部科学省の所掌事務に係る科学技術及び学術に関し必要な図書の保存及び利用に関すること。"
                  }
                },
                {
                  "@Num": "11",
                  "ItemTitle": "十一",
                  "ItemSentence": {
                    "Sentence": "前各号に掲げるもののほか、科学技術・学術政策研究所の所掌事務で他の所掌に属しないものに関すること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（企画課の所掌事務）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "企画課は、次に掲げる事務をつかさどる。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "調査及び研究の企画及び立案並びに調整に関すること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "調査及び研究に必要な事務の委託並びに調査及び研究の受託に関すること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "科学技術に関する基本的な政策に関する基礎的な事項の調査及び研究に関する統計その他の資料及び文献の刊行に関すること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "学術の振興に関する基本的な政策に関する基礎的な事項の調査及び研究に関する統計その他の資料及び文献の刊行に関すること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "資源の総合的利用に関する基礎的な事項の調査及び研究に関する統計その他の資料及び文献の刊行に関すること。"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "広報に関すること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（科学技術・学術基盤調査研究室の所掌事務）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "科学技術・学術基盤調査研究室は、次に掲げる事務をつかさどる。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "科学技術に関する基本的な政策に関する基礎的な事項の調査及び研究のうち基盤的なものに関すること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "学術の振興に関する基本的な政策に関する基礎的な事項の調査及び研究のうち基盤的なものに関すること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "資源の総合的利用に関する基礎的な事項の調査及び研究のうち基盤的なものに関すること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "科学技術に関する基本的な政策に関する基礎的な事項の調査及び研究に関する統計その他の資料及び文献の調査、収集、整理、分析及び保管に関すること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "学術の振興に関する基本的な政策に関する基礎的な事項の調査及び研究に関する統計その他の資料及び文献の調査、収集、整理、分析及び保管に関すること。"
                  }
                },
                {
                  "@Num": "6",
                  "ItemTitle": "六",
                  "ItemSentence": {
                    "Sentence": "資源の総合的利用に関する基礎的な事項の調査及び研究に関する統計その他の資料及び文献の調査、収集、整理、分析及び保管に関すること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（科学技術予測センターの所掌事務）",
            "ArticleTitle": "第八条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "科学技術予測センターは、次に掲げる事務をつかさどる。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "科学技術の将来の予測その他の科学技術に関する研究の動向の調査及び研究を行うこと（研究グループの所掌に属するものを除く。）。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "科学技術が経済社会及び国民生活に及ぼす影響の予測その他の科学技術の影響の調査及び研究を行うこと（研究グループの所掌に属するものを除く。）。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "9",
