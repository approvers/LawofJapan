{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "004",
    "@Year": "18",
    "LawNum": "平成十八年内閣府・法務省令第四号",
    "LawBody": {
      "LawTitle": "担保付社債に関する信託契約等に関する規則",
      "EnactStatement": "担保付社債信託法（明治三十八年法律第五十二号）の規定に基づき、担保付社債に関する信託契約等に関する規則を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（電磁的記録）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "担保付社債信託法（明治三十八年法律第五十二号。以下「法」という。）第十八条第二項に掲げる規定の内閣府令・法務省令で定めるものは、磁気ディスクその他これに準ずる方法により一定の情報を確実に記録しておくことができる物をもって調製するファイルに情報を記録したものとする。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（信託証書の記載又は記録事項）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第十九条第一項第十五号に規定する内閣府令・法務省令で定める事項は、次に掲げるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "他の会社と合同して担保付社債を発行するときは、その旨及び各会社の負担部分"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "社債原簿管理人を定めたときは、その社債原簿管理人の氏名又は名称及び住所"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（電子署名）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "次に掲げる規定に規定する内閣府令・法務省令で定める署名又は記名押印に代わる措置は、電子署名とする。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "法第十九条第三項"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "法第五十三条第四項"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項に規定する「電子署名」とは、電磁的記録（法第十八条第二項に規定する電磁的記録をいう。以下同じ。）に記録することができる情報について行われる措置であって、次の要件のいずれにも該当するものをいう。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "当該情報が当該措置を行った者の作成に係るものであることを示すためのものであること。"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "当該情報について改変が行われていないかどうかを確認することができるものであること。"
                    }
                  }
                ]
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（電磁的記録に記録された事項を表示する方法）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "次に掲げる規定に規定する内閣府令・法務省令で定める方法は、当該規定の電磁的記録に記録された事項を紙面又は映像面に表示する方法とする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "法第二十条第二項第三号"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "法第三十条第二項第二号"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "法第三十三条第二項第二号"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（電磁的方法）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第二十条第二項第四号に規定する内閣府令・法務省令で定めるものは、次に掲げる方法とする。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "電子情報処理組織を使用する方法のうちイ又はロに掲げるもの"
                    },
                    "Subitem1": [
                      {
                        "@Num": "1",
                        "Subitem1Title": "イ",
                        "Subitem1Sentence": {
                          "Sentence": "送信者の使用に係る電子計算機と受信者の使用に係る電子計算機とを接続する電気通信回線を通じて送信し、受信者の使用に係る電子計算機に備えられたファイルに記録する方法"
                        }
                      },
                      {
                        "@Num": "2",
                        "Subitem1Title": "ロ",
                        "Subitem1Sentence": {
                          "Sentence": "送信者の使用に係る電子計算機に備えられたファイルに記録された情報の内容を電気通信回線を通じて情報の提供を受ける者の閲覧に供し、当該情報の提供を受ける者の使用に係る電子計算機に備えられたファイルに当該情報を記録する方法"
                        }
                      }
                    ]
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "磁気ディスクその他これに準ずる方法により一定の情報を確実に記録しておくことができる物をもって調製するファイルに情報を記録したものを交付する方法"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項各号に掲げる方法は、受信者がファイルへの記録を出力することにより書面を作成することができるものでなければならない。"
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（社債原簿の写しの提出方法）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第二十九条に規定する社債原簿の写しの提出又は提供は、この条の定めるところによる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "委託者は、社債原簿が書面をもって作成されているときは、受託会社に対し、その写しを提出しなければならない。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "委託者は、社債原簿が法第十八条第二項の電磁的記録をもって作成されているときは、受託会社に対し、当該電磁的記録に記録された事項を記載した書面を提出しなければならない。"
                }
              },
              {
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": "前項に規定する場合において、委託者は、受託会社の承諾を得て、同項の規定による提出に代えて、同項の電磁的記録に記録された事項を、法第二十条第二項第四号の電磁的方法であって委託者の定めたものにより提供することができる。"
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この規則は、会社法（平成十七年法律第八十六号）の施行の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一九年七月一三日内閣府・法務省令第二号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この命令は、信託法（平成十八年法律第百八号）の施行の日から施行する。"
            }
          }
        }
      ]
    }
  }
}
