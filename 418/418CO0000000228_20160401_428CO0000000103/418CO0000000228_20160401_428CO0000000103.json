                          "@BorderRight": "solid",
                          "@BorderTop": "solid",
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "平成二十一年四月一日以後"
                          }
                        },
                        {
                          "@BorderBottom": "solid",
                          "@BorderLeft": "solid",
                          "@BorderRight": "solid",
                          "@BorderTop": "solid",
