{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "10",
    "@Year": "18",
    "LawNum": "平成十八年外務省令第十号",
    "LawBody": {
      "LawTitle": "外務職員の留学費用の償還に関する省令",
      "EnactStatement": "国家公務員の留学費用の償還に関する法律（平成十八年法律第七十号）を実施するため、外務職員の留学費用の償還に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（趣旨）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、国家公務員の留学費用の償還に関する法律（平成十八年法律第七十号。以下「法」という。）に規定する外務職員の留学費用の償還に関し必要な事項を定めるものとする。"
              }
            }
          },
          {
            "@Num": "2",
            "ArticleCaption": "（留学）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第七条の規定において読み替えて適用する法第二条第二項で定める研修（以下「留学」という。）は、次に掲げるものとする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "外務職員の研修に関する省令（昭和二十七年外務省令第十八号。以下「省令」という。）第四条第一項に規定する在外上級研修員として外国において行う研修"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "省令第四条第二項に規定する外務省専門職研修員として外国において行う研修"
                  }
                }
              ]
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（留学費用）",
            "ArticleTitle": "第三条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "法第二条第三項の外務省令で定める費用（以下「留学費用」という。）は、次に掲げる費用とする。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "国家公務員等の旅費に関する法律（昭和二十五年法律第百十四号）による旅費（ただし、留学以外の公務に係る旅費を除く。）"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "在外公館の名称及び位置並びに在外公館に勤務する外務公務員の給与に関する法律（昭和二十七年法律第九十三号）第六条第八項に規定する研修員手当"
                  }
                }
              ]
            }
          },
          {
            "@Num": "4",
            "ArticleCaption": "（留学を命ずる職員に対して明示すべき事項）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "外務大臣は、留学の実施について職員の同意を得るに当たっては、当該職員に当該留学が法第二条第二項に規定するものである旨を明示しなければならない。"
              }
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（法第三条第一項に該当する者に対する通知）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "外務大臣は、法第三条第一項に該当する者に対し、速やかに、国が支出した留学費用の総額、同項の規定により償還しなければならない金額その他必要な事項を書面により通知するものとする。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（法第三条第一項第二号の外務省令で定める率）",
            "ArticleTitle": "第六条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "法第三条第一項第二号の外務省令で定める率は、六十月から同号の職員としての在職期間の月数を控除した月数を六十月で除して得た率とする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の職員としての在職期間の月数の計算については、次の各号に定めるところによる。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "月により期間を計算する場合は、民法（明治二十九年法律第八十九号）第百四十三条に定めるところによる。"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "一月に満たない期間が二以上ある場合は、これらの期間を合算するものとし、これらの期間の計算については、三十日をもって一月とする。"
                    }
                  }
                ]
              }
            ]
          },
          {
            "@Num": "7",
            "ArticleCaption": "（雑則）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令に定めるもののほか、外務職員の留学費用の償還に関し必要な事項は、外務大臣が定める。"
              }
            }
          }
        ]
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": "この省令は、法の施行の日（平成十八年六月十九日）から施行する。"
          }
        }
      }
    }
  }
}
