                  "@Hide": "false",
                  "@Num": "7",
                  "ItemTitle": "七",
                  "ItemSentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "転換後の法人が会計参与又は会計監査人を定めたときは、次に掲げる書面"
                    }
                  },
                  "Subitem1": [
                    {
                      "@Delete": "false",
                      "@Hide": "false",
                      "@Num": "1",
                      "Subitem1Title": "イ",
                      "Subitem1Sentence": {
