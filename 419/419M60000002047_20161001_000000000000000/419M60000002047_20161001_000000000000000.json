                    }
                  },
                  {
                    "@Num": "6",
                    "ItemTitle": "六",
                    "ItemSentence": {
                      "Sentence": "前各号に掲げるもののほか、当該貸付信託の信託契約の条項"
                    }
                  }
                ]
              }
