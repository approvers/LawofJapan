            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Hide": "false",
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "この法律は、公布の日から起算して三月を経過した日から施行する。"
                }
              }
            }
          }
        },
        {
          "@AmendLawNum": "平成一〇年六月一二日法律第一〇一号",
