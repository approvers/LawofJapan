{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "21",
    "@Year": "27",
    "LawNum": "昭和二十七年外務省令第二十一号",
    "LawBody": {
      "LawTitle": "査察使に関する省令",
      "EnactStatement": "外務公務員法（昭和二十七年法律第四十一号）第十六条第四項の規定に基き、査察使に関する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（査察使の任命及び派遣）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "査察使は、外務省本省に勤務する外務公務員の中から任命し、在外公館に定期的に派遣するものとする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "外務大臣は、特に必要と認める場合には、前項の規定にかかわらず、在外公館に勤務する外務公務員の中から査察使を任命することができる。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "外務大臣は、特別の事情により必要があると認める場合には、第一項の規定にかかわらず、特定の在外公館に臨時に査察使を任命して派遣することができる。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（査察使の任務）",
            "ArticleTitle": "第二条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "査察使は、次の各号に掲げる事項について公平かつ誠実に査察を行い、その結果を、帰任した日から三週間以内に外務大臣に文書で報告しなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "在外公館の活動及び運営状態"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "在外公館の経理状態"
                    }
                  },
                  {
                    "@Num": "3",
                    "ItemTitle": "三",
                    "ItemSentence": {
                      "Sentence": "在外公館に勤務する外務公務員の能率、研修及び服務状態"
                    }
                  },
                  {
                    "@Num": "4",
                    "ItemTitle": "四",
                    "ItemSentence": {
                      "Sentence": "外務大臣から特に命ぜられた事項"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前条第二項及び第三項の規定に基づいて派遣される査察使の任務は前項の規定にかかわらず、別に外務大臣が定めることができる。"
                }
              }
            ]
          },
          {
            "@Num": "3",
            "ArticleCaption": "（査察補佐官の任命及びその任務）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "外務大臣は、外務公務員の中から査察補佐官を任命し、査察使に随行させることができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "査察補佐官は、査察使の命を受け、査察使の任務の遂行を補佐するものとする。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "査察補佐官は、査察使一人について三人を超えないものとする。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（機密保持）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": [
                  {
                    "@Num": "1",
                    "#text": "査察使及び査察補佐官は、その任務の遂行に当たって知ることのできた秘密を漏らしてはならない。"
                  },
                  {
                    "@Num": "2",
                    "#text": "その任務の終了後といえども同様とする。"
                  }
                ]
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一二年一一月二八日外務省令第一一号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        }
      ]
    }
  }
}
