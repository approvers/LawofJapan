{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "CabinetOrder",
    "@Num": "484",
    "@Year": "15",
    "LawNum": "平成十五年政令第四百八十四号",
    "LawBody": {
      "LawTitle": "公立の義務教育諸学校等の教育職員を正規の勤務時間を超えて勤務させる場合等の基準を定める政令",
      "EnactStatement": "内閣は、国立大学法人法等の施行に伴う関係法律の整備等に関する法律（平成十五年法律第百十七号）の施行に伴い、及び公立の義務教育諸学校等の教育職員の給与等に関する特別措置法（昭和四十六年法律第七十七号）第六条第一項（同条第三項において準用する場合を含む。）の規定に基づき、この政令を制定する。",
      "MainProvision": {
        "Paragraph": {
          "@Hide": "false",
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": {
              "@WritingMode": "vertical",
              "#text": "公立の義務教育諸学校等の教育職員の給与等に関する特別措置法（以下「法」という。）第六条第一項（同条第三項において準用する場合を含む。）の政令で定める基準は、次のとおりとする。"
            }
          },
          "Item": [
            {
              "@Delete": "false",
              "@Hide": "false",
              "@Num": "1",
              "ItemTitle": "一",
              "ItemSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "教育職員（法第六条第一項に規定する教育職員をいう。次号において同じ。）については、正規の勤務時間（同項に規定する正規の勤務時間をいう。以下同じ。）の割振りを適正に行い、原則として時間外勤務（正規の勤務時間を超えて勤務することをいい、同条第三項各号に掲げる日において正規の勤務時間中に勤務することを含む。次号において同じ。）を命じないものとすること。"
                }
              }
            },
            {
              "@Delete": "false",
              "@Hide": "false",
              "@Num": "2",
              "ItemTitle": "二",
              "ItemSentence": {
                "Sentence": {
                  "@WritingMode": "vertical",
                  "#text": "教育職員に対し時間外勤務を命ずる場合は、次に掲げる業務に従事する場合であって臨時又は緊急のやむを得ない必要があるときに限るものとすること。"
                }
              },
              "Subitem1": [
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "1",
                  "Subitem1Title": "イ",
                  "Subitem1Sentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "校外実習その他生徒の実習に関する業務"
                    }
                  }
                },
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "2",
                  "Subitem1Title": "ロ",
                  "Subitem1Sentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "修学旅行その他学校の行事に関する業務"
                    }
                  }
                },
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "3",
                  "Subitem1Title": "ハ",
                  "Subitem1Sentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "職員会議（設置者の定めるところにより学校に置かれるものをいう。）に関する業務"
                    }
                  }
                },
                {
                  "@Delete": "false",
                  "@Hide": "false",
                  "@Num": "4",
                  "Subitem1Title": "ニ",
                  "Subitem1Sentence": {
                    "Sentence": {
                      "@WritingMode": "vertical",
                      "#text": "非常災害の場合、児童又は生徒の指導に関し緊急の措置を必要とする場合その他やむを得ない場合に必要な業務"
                    }
                  }
                }
              ]
            }
          ]
        }
      },
      "SupplProvision": {
        "SupplProvisionLabel": "附　則",
        "Paragraph": {
          "@Hide": "false",
          "@Num": "1",
          "ParagraphNum": null,
          "ParagraphSentence": {
            "Sentence": {
              "@WritingMode": "vertical",
              "#text": "この政令は、平成十六年四月一日から施行する。"
            }
          }
        }
      }
    }
  }
}
