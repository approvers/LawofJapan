                "ParagraphSentence": {
                  "Sentence": {
                    "@WritingMode": "vertical",
                    "#text": "この法律は、公布の日から施行する。"
                  }
                }
              }
            },
            {
              "@Delete": "false",
              "@Hide": "false",
              "@Num": "82",
              "ArticleCaption": "（政令への委任）",
              "ArticleTitle": "第八十二条",
              "Paragraph": {
                "@Hide": "false",
