                          "@BorderLeft": "solid",
                          "@BorderRight": "solid",
                          "@BorderTop": "solid",
                          "Sentence": {
                            "@WritingMode": "vertical",
                            "#text": "七　合格証明書の再交付を受けようとする者"
                          }
                        },
