{
  "Law": {
    "@Era": "Heisei",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "53",
    "@Year": "09",
    "LawNum": "平成九年通商産業省令第五十三号",
    "LawBody": {
      "LawTitle": "発電用風力設備に関する技術基準を定める省令",
      "EnactStatement": "電気事業法（昭和三十九年法律第百七十号）第三十九条第一項の規定に基づき、発電用風力設備に関する技術基準を定める省令（平成二年通商産業省令第二十五号）の全部を改正する省令を次のように定める。",
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（適用範囲）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "この省令は、風力を原動力として電気を発生するために施設する電気工作物について適用する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "前項の電気工作物とは、一般用電気工作物及び事業用電気工作物をいう。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（定義）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令において使用する用語は、電気事業法施行規則（平成七年通商産業省令第七十七号）において使用する用語の例による。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（取扱者以外の者に対する危険防止措置）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "風力発電所を施設するに当たっては、取扱者以外の者に見やすい箇所に風車が危険である旨を表示するとともに、当該者が容易に接近するおそれがないように適切な措置を講じなければならない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "発電用風力設備が一般用電気工作物である場合には、前項の規定は、同項中「風力発電所」とあるのは「発電用風力設備」と、「当該者が容易に」とあるのは「当該者が容易に風車に」と読み替えて適用するものとする。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（風車）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "風車は、次の各号により施設しなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "負荷を遮断したときの最大速度に対し、構造上安全であること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "風圧に対して構造上安全であること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "運転中に風車に損傷を与えるような振動がないように施設すること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "通常想定される最大風速においても取扱者の意図に反して風車が起動することのないように施設すること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "運転中に他の工作物、植物等に接触しないように施設すること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（風車の安全な状態の確保）",
            "ArticleTitle": "第五条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "風車は、次の各号の場合に安全かつ自動的に停止するような措置を講じなければならない。"
                },
                "Item": [
                  {
                    "@Num": "1",
                    "ItemTitle": "一",
                    "ItemSentence": {
                      "Sentence": "回転速度が著しく上昇した場合"
                    }
                  },
                  {
                    "@Num": "2",
                    "ItemTitle": "二",
                    "ItemSentence": {
                      "Sentence": "風車の制御装置の機能が著しく低下した場合"
                    }
                  }
                ]
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "発電用風力設備が一般用電気工作物である場合には、前項の規定は、同項中「安全かつ自動的に停止するような措置」とあるのは「安全な状態を確保するような措置」と読み替えて適用するものとする。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": [
                    {
                      "@Function": "main",
                      "@Num": "1",
                      "#text": "最高部の地表からの高さが二十メートルを超える発電用風力設備には、雷撃から風車を保護するような措置を講じなければならない。"
                    },
                    {
                      "@Function": "proviso",
                      "@Num": "2",
                      "#text": "ただし、周囲の状況によって雷撃が風車を損傷するおそれがない場合においては、この限りでない。"
                    }
                  ]
                }
              }
            ]
          },
          {
            "@Num": "6",
            "ArticleCaption": "（圧油装置及び圧縮空気装置の危険の防止）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "発電用風力設備として使用する圧油装置及び圧縮空気装置は、次の各号により施設しなければならない。"
              },
              "Item": [
                {
                  "@Num": "1",
                  "ItemTitle": "一",
                  "ItemSentence": {
                    "Sentence": "圧油タンク及び空気タンクの材料及び構造は、最高使用圧力に対して十分に耐え、かつ、安全なものであること。"
                  }
                },
                {
                  "@Num": "2",
                  "ItemTitle": "二",
                  "ItemSentence": {
                    "Sentence": "圧油タンク及び空気タンクは、耐食性を有するものであること。"
                  }
                },
                {
                  "@Num": "3",
                  "ItemTitle": "三",
                  "ItemSentence": {
                    "Sentence": "圧力が上昇する場合において、当該圧力が最高使用圧力に到達する以前に当該圧力を低下させる機能を有すること。"
                  }
                },
                {
                  "@Num": "4",
                  "ItemTitle": "四",
                  "ItemSentence": {
                    "Sentence": "圧油タンクの油圧又は空気タンクの空気圧が低下した場合に圧力を自動的に回復させる機能を有すること。"
                  }
                },
                {
                  "@Num": "5",
                  "ItemTitle": "五",
                  "ItemSentence": {
                    "Sentence": "異常な圧力を早期に検知できる機能を有すること。"
                  }
                }
              ]
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（風車を支持する工作物）",
            "ArticleTitle": "第七条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "風車を支持する工作物は、自重、積載荷重、積雪及び風圧並びに地震その他の振動及び衝撃に対して構造上安全でなければならない。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "発電用風力設備が一般用電気工作物である場合には、風車を支持する工作物に取扱者以外の者が容易に登ることができないように適切な措置を講じること。"
                }
              }
            ]
          },
          {
            "@Num": "8",
            "ArticleCaption": "（公害等の防止）",
            "ArticleTitle": "第八条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "電気設備に関する技術基準を定める省令（平成九年通商産業省令第五十二号）第十九条第十一項及び第十三項の規定は、風力発電所に設置する発電用風力設備について準用する。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "発電用風力設備が一般用電気工作物である場合には、前項の規定は、同項中「第十九条第十一項及び第十三項」とあるのは「第十九条第十三項」と、「風力発電所に設置する発電用風力設備」とあるのは「発電用風力設備」と読み替えて適用するものとする。"
                }
              }
            ]
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Num": "1",
              "ParagraphNum": "１",
              "ParagraphSentence": {
                "Sentence": "この省令は、平成九年六月一日から施行する。"
              }
            },
            {
              "@Num": "2",
              "ParagraphNum": "２",
              "ParagraphSentence": {
                "Sentence": "この省令の施行の際現に施設し、又は施設に着手した電気工作物については、なお従前の例による。"
              }
            }
          ]
        },
        {
          "@AmendLawNum": "平成一七年三月二九日経済産業省令第三四号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": [
                {
                  "@Function": "main",
                  "@Num": "1",
                  "#text": "この省令は、平成十七年四月一日から施行する。"
                },
                {
                  "@Function": "proviso",
                  "@Num": "2",
                  "#text": "ただし、この省令の施行の際現に設置され、又は設置のための工事に着手している電気工作物については、この省令の施行の日から一年間は、なお従前の例による。"
                }
              ]
            }
          }
        },
        {
          "@AmendLawNum": "平成二一年一二月一八日経済産業省令第六九号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": "１",
            "ParagraphSentence": {
              "Sentence": "この省令は、平成二十二年四月一日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成二九年三月三一日経済産業省令第三二号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": {
            "@Num": "1",
            "ArticleCaption": "（施行期日）",
            "ArticleTitle": "第一条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "この省令は、電気事業法等の一部を改正する等の法律（平成二十七年法律第四十七号）附則第一条第五号に掲げる規定の施行の日（平成二十九年四月一日）から施行する。"
              }
            }
          }
        }
      ]
    }
  }
}
