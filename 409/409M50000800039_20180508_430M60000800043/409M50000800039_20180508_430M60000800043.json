            }
          }
        },
        {
          "@AmendLawNum": "平成一八年三月三一日国土交通省令第二四号",
          "@Extract": "true",
          "SupplProvisionLabel": "附　則",
          "Article": [
            {
              "@Delete": "false",
              "@Hide": "false",
              "@Num": "1",
