{
  "Law": {
    "@Era": "Showa",
    "@Lang": "ja",
    "@LawType": "MinisterialOrdinance",
    "@Num": "3",
    "@Year": "58",
    "LawNum": "昭和五十八年外務省令第三号",
    "LawBody": {
      "LawTitle": "外務省研修所研修規則",
      "EnactStatement": "外務省設置法（昭和二十六年法律第二百八十三号）第十五条第四項の規定に基づき、外務省研修所規則の全部を改正する省令を次のように定める。",
      "Preamble": {
        "Paragraph": [
          {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "外務省研修所規則の全部を改正する省令"
            }
          },
          {
            "@Num": "2",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "外務省研修所規則（昭和四十四年外務省令第九号）の全部を次のように改正する。"
            }
          }
        ]
      },
      "MainProvision": {
        "Article": [
          {
            "@Num": "1",
            "ArticleCaption": "（研修の区分）",
            "ArticleTitle": "第一条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "外務省研修所（以下「研修所」という。）における研修の区分は、第一部、第二部、第三部、第四部、第五部及び第六部の各部とする。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "第一部においては、課長相当職以上の外務職員に対する研修を行う。"
                }
              },
              {
                "@Num": "3",
                "ParagraphNum": "３",
                "ParagraphSentence": {
                  "Sentence": "第二部においては、新規採用の国家公務員採用Ⅰ種試験合格者、国家公務員採用総合職試験合格者及びこれに準ずる者に対する研修を行う。"
                }
              },
              {
                "@Num": "4",
                "ParagraphNum": "４",
                "ParagraphSentence": {
                  "Sentence": "第三部においては、新規採用の外務省専門職員採用試験合格者及びこれに準ずる者に対する研修を行う。"
                }
              },
              {
                "@Num": "5",
                "ParagraphNum": "５",
                "ParagraphSentence": {
                  "Sentence": "第四部においては、新規採用の国家公務員採用ＩＩＩ種試験合格者、国家公務員採用一般職試験合格者及びこれに準ずる者に対する研修を行う。"
                }
              },
              {
                "@Num": "6",
                "ParagraphNum": "６",
                "ParagraphSentence": {
                  "Sentence": "第五部においては、外務職員に併任されている外務省以外の国の行政機関の職員で、在外公館に勤務する予定の者に対する研修を行う。"
                }
              },
              {
                "@Num": "7",
                "ParagraphNum": "７",
                "ParagraphSentence": {
                  "Sentence": "第六部においては、第二項から第六項までに掲げる者以外の外務省職員に対する研修を行う。"
                }
              }
            ]
          },
          {
            "@Num": "2",
            "ArticleCaption": "（研修方法）",
            "ArticleTitle": "第二条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "研修は、講義、演習、見学及び実習により行う。"
              }
            }
          },
          {
            "@Num": "3",
            "ArticleCaption": "（研修の委嘱）",
            "ArticleTitle": "第三条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "所長は、研修所職員以外の外務省職員に対し、その者の属する長の承認を得て、研修員（研修所において研修を受ける者をいう。以下同じ。）に対する研修を行うことを委嘱することができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "所長は、外務省職員以外の学識経験者に対し、研修員に対する研修を行うことを委嘱することができる。"
                }
              }
            ]
          },
          {
            "@Num": "4",
            "ArticleCaption": "（外務省職員以外の者に対する研修）",
            "ArticleTitle": "第四条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "所長は、特に必要があると認めるときは、外務省職員以外の者に対し、研修を受けることを許可することができる。"
              }
            }
          },
          {
            "@Num": "5",
            "ArticleCaption": "（通信による研修）",
            "ArticleTitle": "第五条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "研修所は、外務省職員に対し、通信による研修を行うことができる。"
              }
            }
          },
          {
            "@Num": "6",
            "ArticleCaption": "（規律）",
            "ArticleTitle": "第六条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "研修員は、研修所における研修期間中、所長の定める規律に服さなければならない。"
              }
            }
          },
          {
            "@Num": "7",
            "ArticleCaption": "（研修の結果の報告）",
            "ArticleTitle": "第七条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "所長は、研修を終了した者の氏名及び研修の結果を外務大臣に報告しなければならない。"
              }
            }
          },
          {
            "@Num": "8",
            "ArticleCaption": "（上級幹部研究員）",
            "ArticleTitle": "第八条",
            "Paragraph": [
              {
                "@Num": "1",
                "ParagraphNum": null,
                "ParagraphSentence": {
                  "Sentence": "外務大臣は、外務省職員のうちから上級幹部研究員を命ずることができる。"
                }
              },
              {
                "@Num": "2",
                "ParagraphNum": "２",
                "ParagraphSentence": {
                  "Sentence": "上級幹部研究員は、研修所において、外交に関する重要な政策及び問題についての調査及び研究を行う。"
                }
              }
            ]
          },
          {
            "@Num": "9",
            "ArticleCaption": "（執務細則）",
            "ArticleTitle": "第九条",
            "Paragraph": {
              "@Num": "1",
              "ParagraphNum": null,
              "ParagraphSentence": {
                "Sentence": "所長は、この規則で定めるもののほか、外務大臣の承認を得て、必要な執務細則を定めることができる。"
              }
            }
          }
        ]
      },
      "SupplProvision": [
        {
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "昭和六〇年四月一日外務省令第二号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": [
                {
                  "@Function": "main",
                  "@Num": "1",
                  "#text": "この省令は、昭和六十一年四月一日から施行する。"
                },
                {
                  "@Function": "proviso",
                  "@Num": "2",
                  "#text": "ただし、この省令施行の際現に研修を命ぜられている在外上級研修員については、第三条の改正規定にかかわらず、なお従前の例により、昭和五十九年度外務公務員採用上級試験の合格者については、第一条及び第三条の改正規定にかかわらず、なお従前の例による。"
                }
              ]
            }
          }
        },
        {
          "@AmendLawNum": "平成六年三月一日外務省令第二号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一三年一月六日外務省令第二号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": [
            {
              "@Num": "1",
              "ParagraphCaption": "（施行期日）",
              "ParagraphNum": "１",
              "ParagraphSentence": {
                "Sentence": "この中央省庁等改革推進本部令（次項において「本部令」という。）は、内閣法の一部を改正する法律（平成十一年法律第八十八号）の施行の日（平成十三年一月六日）から施行する。"
              }
            },
            {
              "@Num": "2",
              "ParagraphCaption": "（この本部令の効力）",
              "ParagraphNum": "２",
              "ParagraphSentence": {
                "Sentence": "この本部令は、その施行の日に、外務省研修所規則の一部を改正する省令（平成十三年外務省令第二号）となるものとする。"
              }
            }
          ]
        },
        {
          "@AmendLawNum": "平成一三年一〇月一五日外務省令第一一号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、平成十四年一月一日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一四年三月一日外務省令第四号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、平成十四年四月一日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成一六年九月九日外務省令第一一号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
            "ParagraphNum": null,
            "ParagraphSentence": {
              "Sentence": "この省令は、公布の日から施行する。"
            }
          }
        },
        {
          "@AmendLawNum": "平成二五年四月一日外務省令第一〇号",
          "SupplProvisionLabel": "附　則",
          "Paragraph": {
            "@Num": "1",
